{
  "name": "@noshiro/mono-scripts",
  "version": "2.4.0",
  "private": false,
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./esm/index.d.mts",
        "default": "./esm/index.mjs"
      }
    }
  },
  "files": [
    "esm",
    "src"
  ],
  "scripts": {
    "build": "wireit",
    "clean": "run-p clean:**",
    "clean:build": "rimraf esm",
    "clean:wireit": "rimraf .wireit/**",
    "fmt": "yarn zz:cmd:prettier .",
    "gi": "wireit",
    "lint": "wireit",
    "show-tsconfig": "tsc --showConfig",
    "test": "wireit",
    "testw": "yarn zz:cmd:vitest watch",
    "tsc": "yarn type-check",
    "tscw": "tsc --noEmit --watch",
    "type-check": "wireit",
    "zz:cmd:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint",
    "zz:cmd:eslint:src": "yarn zz:cmd:eslint --config eslint.config.js './src/**/*' --cache --cache-location ./src/.eslintcache",
    "zz:cmd:prettier": "prettier --cache --cache-strategy content --ignore-path ../.prettierignore --write",
    "zz:cmd:vitest": "vitest --config ./configs/vitest.config.ts"
  },
  "wireit": {
    "type-check": {
      "command": "tsc --noEmit",
      "files": [
        "./**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./tsconfig.json",
        "../package.json",
        "../config/tsconfig/**"
      ],
      "output": []
    },
    "gi": {
      "command": "bash ./bash/index_ts_generator.sh ./src --min-depth 0 --ext .mts",
      "files": [
        "./bash/index_ts_generator.sh",
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}"
      ],
      "clean": false,
      "output": [
        "src/**/index.mts"
      ],
      "packageLocks": []
    },
    "build": {
      "dependencies": [
        "gi"
      ],
      "command": "tsc --project ./configs/tsconfig.build.json",
      "files": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./tsconfig.json",
        "../package.json",
        "../config/tsconfig/**"
      ],
      "clean": true,
      "output": [
        "esm/**",
        ".tsbuildinfo"
      ]
    },
    "test": {
      "command": "yarn zz:cmd:vitest run",
      "files": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./configs/vitest.config.ts",
        "./configs/tsconfig.test.json",
        "../package.json",
        "../config/tsconfig/**"
      ],
      "output": []
    },
    "lint": {
      "command": "yarn zz:cmd:eslint:src",
      "files": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./eslint.config.js",
        "./package.json",
        "./tsconfig.json",
        "../package.json",
        "../config/tsconfig/**"
      ],
      "output": []
    },
    "lint:fix": {
      "command": "yarn zz:cmd:eslint:src --fix",
      "files": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./eslint.config.js",
        "./package.json",
        "./tsconfig.json",
        "../package.json",
        "../config/tsconfig/**"
      ],
      "clean": false,
      "output": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}"
      ]
    }
  }
}
