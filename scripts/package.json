{
  "name": "@noshiro/mono-scripts",
  "version": "2.4.0",
  "private": false,
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "lint": "wireit",
    "show-tsconfig": "tsc --showConfig",
    "tsc": "yarn type-check",
    "tscw": "tsc --noEmit --watch",
    "type-check": "wireit",
    "zz:cmd:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint"
  },
  "wireit": {
    "type-check": {
      "command": "tsc --noEmit",
      "files": [
        "./**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./tsconfig.json",
        "../package.json",
        "../config/tsconfig/**",
        "../packages/utils/stdlib/stdlib.d.ts",
        "../packages/utils/ts-type-utils/ts-type-utils.d.mts",
        "../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "output": []
    },
    "lint": {
      "dependencies": [
        "../packages/utils/eslint-utils:build"
      ],
      "command": "yarn zz:cmd:eslint --config eslint.config.js \"./**/*.mjs\"",
      "files": [
        "./**/*.{mjs,d.mts}",
        "./eslint.config.js",
        "./package.json",
        "./tsconfig.json",
        "../package.json",
        "../config/tsconfig/**",
        "../packages/utils/stdlib/stdlib.d.ts",
        "../packages/utils/ts-type-utils/ts-type-utils.d.mts",
        "../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "output": []
    }
  }
}
