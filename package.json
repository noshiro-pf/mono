{
  "private": true,
  "description": "monorepo for TypeScript projects",
  "license": "MIT",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "build:apps": "node scripts/build-apps.js",
    "build:utils": "node scripts/build-utils.js",
    "check:no-diff": "scripts/git_no_changes.sh",
    "ci": "run-s ws:setup ws:gi ws:type-check ws:build fmt:all ws:lint:fix:fast ws:test:fast type-check:root check:no-diff",
    "ci:local": "yarn clean && yarn install && yarn ci",
    "clean": "run-p clean:node_modules clean:caches clean:build",
    "clean:build": "run-p ws:clean:build",
    "clean:caches": "run-p ws:clean:eslintcache ws:clean:wireit",
    "clean:gitignored": "git clean -xfd",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "create:preact-app:vite": "scripts/create_new_preact_app_vite.sh",
    "create:preact-app:webpack": "scripts/create_new_preact_app_webpack.sh",
    "create:react-app:vite": "scripts/create_new_react_app_vite.sh",
    "create:react-app:webpack": "scripts/create_new_react_app_webpack.sh",
    "create:slides": "scripts/create_new_slides.sh",
    "create:util": "scripts/create_new_util.sh",
    "fmt:all": "prettier --write . > /dev/null",
    "gen-eslint-rules-type": "wireit",
    "lint:apps": "node scripts/lint-apps.js",
    "lint:cspell": "cspell \"**\" --gitignore --gitignore-root ./ --no-progress",
    "lint:utils": "node scripts/lint-utils.js",
    "pub:all": "scripts/publish.sh",
    "setup:all": "run-s setup:root ws:setup",
    "setup:root": "run-s z:gen-eslint-rules-type:compile gen-eslint-rules-type",
    "type-check:root": "run-s type-check:root:scripts type-check:root:configs",
    "type-check:root:configs": "tsc --project config/tsconfig.json",
    "type-check:root:scripts": "tsc --project scripts/tsconfig.json",
    "ws:build": "yarn z:ws-run-stages build",
    "ws:clean": "yarn z:ws-run-parallel clean",
    "ws:clean:build": "yarn z:ws-run-parallel clean:build",
    "ws:clean:eslintcache": "yarn z:ws-run-parallel clean:eslintcache",
    "ws:clean:wireit": "yarn z:ws-run-parallel clean:wireit",
    "ws:gi": "yarn z:ws-run-parallel gi",
    "ws:lint": "yarn z:ws-run-serial lint",
    "ws:lint:fast": "yarn z:ws-run-parallel lint",
    "ws:lint:fix": "yarn z:ws-run-serial lint:fix",
    "ws:lint:fix:fast": "yarn z:ws-run-parallel lint:fix",
    "ws:setup": "yarn z:ws-run-stages setup",
    "ws:test": "yarn z:ws-run-serial test",
    "ws:test:fast": "yarn z:ws-run-parallel test",
    "ws:type-check": "yarn z:ws-run-parallel type-check",
    "z:gen-eslint-rules-type:compile": "wireit",
    "z:ws-run": "wsrun --exclude-missing --fast-exit --prefix --ifDependency",
    "z:ws-run-parallel": "yarn z:ws-run --parallel --concurrency 5",
    "z:ws-run-serial": "yarn z:ws-run --serial",
    "z:ws-run-stages": "yarn z:ws-run --stages"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.0",
    "@preact/preset-vite": "^2.4.0",
    "@rollup/plugin-inject": "^5.0.3",
    "@solid/eslint-config-base": "^0.1.8",
    "@types/argparse": "^2.0.10",
    "@types/compression-webpack-plugin": "^6.0.5",
    "@types/copy-webpack-plugin": "^8.0.0",
    "@types/dotenv-webpack": "^7.0.2",
    "@types/eslint": "^8.4.10",
    "@types/node": "^18.6.4",
    "@types/nodemailer": "^6.4.4",
    "@types/react": "^17.0.18",
    "@types/react-dom": "^17.0.9",
    "@types/react-hot-loader": "^4.1.1",
    "@types/react-router": "^5.1.16",
    "@types/react-router-dom": "^5.1.8",
    "@types/styled-components": "^5.1.12",
    "@types/terser-webpack-plugin": "^5.0.3",
    "@types/uuid": "^8.3.1",
    "@types/webpack-bundle-analyzer": "^4.4.0",
    "@types/webpack-dev-server": "^3.11.4",
    "@types/webpack-node-externals": "^2.5.1",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "argparse": "^2.0.1",
    "babel-loader": "^8.2.2",
    "command-line-args": "^5.2.1",
    "compression-webpack-plugin": "^8.0.1",
    "copy-webpack-plugin": "^6.1.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "cspell": "^6.12.0",
    "css-loader": "^6.2.0",
    "cypress": "^10.8.0",
    "dotenv": "^10.0.0",
    "dotenv-webpack": "^7.0.3",
    "eslint": "^8.32.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-gitignore": "^0.1.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-array-func": "^3.1.8",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-deprecation": "^1.3.3",
    "eslint-plugin-functional": "^4.4.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.6.0",
    "eslint-plugin-total-functions": "^6.0.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "file-loader": "^6.2.0",
    "firebase-admin": "^10.0.2",
    "firebase-functions-test": "^0.3.1",
    "firebase-tools": "^10.7.2",
    "glob": "^8.0.3",
    "happy-dom": "^8.1.4",
    "html-webpack-plugin": "^5.3.2",
    "http-server": "^14.1.1",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "jest-fetch-mock": "^3.0.3",
    "json-schema-to-typescript": "^11.0.2",
    "prettier": "^2.8.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "prettier-plugin-packagejson": "^2.3.0",
    "raw-loader": "^4.0.2",
    "react-codemod": "^5.4.3",
    "react-hot-loader": "^4.13.0",
    "rimraf": "^3.0.2",
    "solid-js": "^0.23.11",
    "solid-scripts": "0.0.50",
    "sort-package-json": "^2.0.0",
    "source-map-loader": "^3.0.0",
    "style-loader": "^3.2.1",
    "terser-webpack-plugin": "^5.1.4",
    "ts-jest": "^29.0.1",
    "ts-loader": "^9.3.1",
    "ts-morph": "^16.0.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.9.3",
    "url-loader": "^4.1.1",
    "vite": "^4.0.0",
    "vitest": "^0.27.1",
    "webpack": "^5.40.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0",
    "wireit": "0.5.0",
    "wsrun": "^5.2.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "wireit": {
    "gen-eslint-rules-type": {
      "command": "config/eslintrc/generate-rules-type/generate-rules-type.sh",
      "files": [
        "config/eslintrc/generate-rules-type/generate-rules-type.sh"
      ],
      "dependencies": [
        "z:gen-eslint-rules-type:compile"
      ],
      "output": [
        "config/eslintrc/eslint-rules/rules-type/**/*.ts"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "z:gen-eslint-rules-type:compile": {
      "command": "tsc -p config/eslintrc/generate-rules-type/tsconfig.generate-rules-type.json",
      "files": [
        "packages/utils/stdlib/dist/lib.dom.d.ts",
        "packages/utils/stdlib/dist/lib.esnext.d.ts",
        "packages/utils/ts-type-utils/ts-type-utils.d.ts",
        "config/tsconfig/tsconfig.cjs.nolib.json",
        "config/eslintrc/generate-rules-type/tsconfig.generate-rules-type.json",
        "config/eslintrc/generate-rules-type/generate-rules-type.ts",
        "config/eslintrc/generate-rules-type/index.ts",
        "config/eslintrc/generate-rules-type/.eslintrc.generate-rules-type.js"
      ],
      "output": [
        "config/eslintrc/generate-rules-type/generate-rules-type.js",
        "config/eslintrc/generate-rules-type/index.js"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    }
  }
}
