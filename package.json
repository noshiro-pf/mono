    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-total-functions": "^4.7.2",
    "file-loader": "^6.0.0",
    "firebase-functions-test": "^0.2.0",
    "firebase-tools": "^8.7.0",
    "glob": "^7.1.6",
