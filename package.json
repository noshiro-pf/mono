{
  "private": true,
  "description": "monorepo for nodejs projects",
  "license": "MIT",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "build:apps": "scripts/build_apps.sh",
    "build:utils": "scripts/build_utils.sh",
    "check:after-setup": "run-s build:apps lint:all test:all check:no-changes",
    "check:full": "yarn clean:all && yarn && run-s setup:ci build:utils check:after-setup",
    "check:no-changes": "yarn fmt:all && scripts/git_no_changes.sh",
    "clean:all": "git clean -xfd",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:root": "run-s clean:root:*",
    "clean:root:config": "rimraf config/**/{*,.*}.js",
    "clean:root:scripts": "rimraf scripts/**/{*,.*}.js",
    "clean:sub": "yarn workspaces run clean",
    "create:preactapp": "scripts/create_new_preact_app.sh",
    "create:reactapp": "scripts/create_new_react_app.sh",
    "create:slides": "scripts/create_new_slides.sh",
    "create:util": "scripts/create_new_util.sh",
    "gi:all": "yarn workspaces run gi",
    "fmt:all": "prettier --write . > /dev/null",
    "lint:all": "yarn workspaces run lint",
    "lint:apps": "scripts/lint_apps.sh",
    "lint:utils": "scripts/lint_utils.sh",
    "lintfix:all": "yarn workspaces run lint:fix",
    "setup:all": "run-s setup:configs setup:custom-eslint build:utils",
    "setup:ci": "run-s setup:configs setup:custom-eslint",
    "setup:custom-eslint": "yarn workspace eslint-plugin-noshiro-custom build",
    "setup:configs": "run-s setup:root setup:sub",
    "presetup:root": "yarn clean:root",
    "setup:root": "run-s setup:root:configs setup:root:scripts",
    "presetup:root:configs": "yarn clean:root:config",
    "setup:root:configs": "tsc --project config/tsconfig.config.json",
    "presetup:root:scripts": "yarn clean:root:scripts",
    "setup:root:scripts": "tsc --project scripts/tsconfig.json",
    "setup:sub": "yarn workspaces run setup",
    "test:all": "yarn workspaces run test",
    "pub:all": "scripts/publish.sh"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@solid/eslint-config-base": "^0.1.8",
    "@testing-library/jest-dom": "^5.11.3",
    "@testing-library/react": "^10.4.8",
    "@testing-library/user-event": "^12.1.1",
    "@types/argparse": "^1.0.38",
    "@types/compression-webpack-plugin": "^6.0.5",
    "@types/copy-webpack-plugin": "^8.0.0",
    "@types/dotenv-webpack": "^7.0.2",
    "@types/eslint": "^7.2.10",
    "@types/node": "^14.0.27",
    "@types/nodemailer": "^6.4.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-hot-loader": "^4.1.1",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.2",
    "@types/terser-webpack-plugin": "^5.0.3",
    "@types/uuid": "^8.3.0",
    "@types/webpack-bundle-analyzer": "^4.4.0",
    "@types/webpack-dev-server": "^3.11.4",
    "@types/webpack-node-externals": "^2.5.1",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "argparse": "^1.0.10",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "compression-webpack-plugin": "^8.0.1",
    "copy-webpack-plugin": "^6.1.0",
    "cpx": "^1.5.0",
    "cross-env": "7.0.2",
    "css-loader": "^4.2.1",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^7.0.3",
    "eslint": "^7.25.0",
    "eslint-config-preact": "^1.1.3",
    "eslint-config-prettier": "^8.3.0",
    "eslint-gitignore": "^0.1.0",
    "eslint-plugin-functional": "^3.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-total-functions": "^4.7.2",
    "file-loader": "^6.0.0",
    "firebase-functions-test": "^0.2.0",
    "firebase-tools": "^8.7.0",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^5.3.2",
    "http-server": "^0.12.3",
    "husky": "^4.3.0",
    "jest": "^26.3.0",
    "jest-fetch-mock": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "prettier-plugin-organize-imports": "^2.1.0",
    "prettier-plugin-packagejson": "^2.2.10",
    "raw-loader": "^4.0.2",
    "react-codemod": "^5.4.3",
    "react-hot-loader": "^4.12.21",
    "rimraf": "^3.0.2",
    "solid-js": "^0.23.11",
    "solid-scripts": "0.0.50",
    "sort-package-json": "^1.44.0",
    "source-map-loader": "^1.0.1",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^5.1.4",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.2",
    "ts-morph": "^7.3.0",
    "ts-node": "^8.10.2",
    "tslib": "^2.2.0",
    "typescript": "^4.3.2",
    "url-loader": "^4.1.0",
    "webpack": "^5.40.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  }
}
