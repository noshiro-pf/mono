{
  "private": true,
  "description": "monorepo for nodejs projects",
  "license": "MIT",
  "workspaces": [
    "packages/*/*"
  ],
  "scripts": {
    "_script_formatchanged": "node scripts/format_changed",
    "_script_formatglob": "node scripts/format_glob",
    "build:utils": "scripts/build_utils.sh",
    "clean:all": "npm-run-all --sequential clean:root clean:sub",
    "clean:root": "rimraf config/**/*.js scripts/**/*.js",
    "clean:sub": "yarn workspaces run clean",
    "fmt": "yarn _script_formatchanged",
    "fmt:all": "prettier --write \"./{packages,scripts,config}/**/*\" > /dev/null",
    "fmt:b": "yarn _script_formatchanged master",
    "fmt:ts": "yarn _script_formatglob \"./{packages,scripts,config}/**/*.{ts,tsx}\"",
    "lint:all": "yarn workspaces run lint",
    "newapp": "scripts/create_new_react_app.sh",
    "newslides": "scripts/create_new_slides.sh",
    "setup:all": "npm-run-all --sequential setup:root setup:sub build:utils",
    "setup:configs": "tsc --project \"config/tsconfig.config.json\"",
    "presetup:root": "yarn clean:root",
    "setup:root": "npm-run-all --sequential setup:configs setup:scripts",
    "setup:scripts": "tsc --project ./scripts/tsconfig.json",
    "setup:sub": "yarn workspaces run setup",
    "sortpkg": "sort-package-json \"package.json\" \"packages/**/package.json\"",
    "test:all": "yarn workspaces run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn fmt:b"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@testing-library/jest-dom": "^5.11.3",
    "@testing-library/react": "^10.4.8",
    "@testing-library/user-event": "^12.1.1",
    "@types/argparse": "^1.0.38",
    "@types/compression-webpack-plugin": "^4.0.0",
    "@types/copy-webpack-plugin": "^6.0.0",
    "@types/dotenv-webpack": "^1.8.0",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-hot-loader": "^4.1.1",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.2",
    "@types/terser-webpack-plugin": "^4.1.0",
    "@types/webpack": "^4.41.21",
    "@types/webpack-bundle-analyzer": "^3.8.0",
    "@types/webpack-dev-server": "^3.11.0",
    "@types/webpack-node-externals": "^2.5.0",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "argparse": "^1.0.10",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "compression-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^6.1.0",
    "cpx": "^1.5.0",
    "cross-env": "7.0.2",
    "css-loader": "^4.2.1",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^2.0.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "file-loader": "^6.0.0",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^4.3.0",
    "http-server": "^0.12.3",
    "husky": "^4.3.0",
    "jest": "^26.3.0",
    "jest-fetch-mock": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "react-hot-loader": "^4.12.21",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.44.0",
    "source-map-loader": "^1.0.1",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^4.0.0",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.2",
    "ts-morph": "^7.3.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.1"
  }
}
