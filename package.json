    "packages/apps/slack_app",
    "packages/apps/slack_app/functions",
    "packages/apps/template_preact_app",
    "packages/apps/template_react_app",
    "packages/!(utils|apps)/**"
  ],
  "scripts": {
    "build:all": "yarn workspaces run build",
    "build:apps": "scripts/build_apps.sh",
    "build:utils": "scripts/build_utils.sh",
    "check:all": "run-s setup:configs gi:all build:all fmt:all lint:fix:all test:all check:no-diff",
    "check:no-diff": "scripts/git_no_changes.sh",
    "clean:all": "git clean -xfd",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:sub": "yarn workspaces run clean",
    "create:preactapp": "scripts/create_new_preact_app.sh",
    "create:reactapp": "scripts/create_new_react_app.sh",
    "create:slides": "scripts/create_new_slides.sh",
    "create:util": "scripts/create_new_util.sh",
    "gi:all": "yarn workspaces run gi",
    "fmt:all": "prettier --write . > /dev/null",
    "lint:all": "yarn workspaces run lint",
    "lint:apps": "scripts/lint_apps.sh",
    "lint:utils": "scripts/lint_utils.sh",
    "lint:fix:all": "yarn workspaces run lint:fix",
    "setup:all": "run-s setup:configs setup:build",
    "setup:build": "run-s setup:custom-eslint build:utils",
    "setup:custom-eslint": "yarn workspace eslint-plugin-noshiro-custom build",
    "setup:configs": "run-s setup:root setup:sub",
    "setup:root": "run-s setup:root:configs setup:root:scripts",
    "setup:root:configs": "run-s setup:root:configs:clean setup:root:configs:build",
    "setup:root:configs:clean": "rimraf config/**/{*,.*}.js",
    "setup:root:configs:build": "tsc --project config/tsconfig.config.json",
    "setup:root:scripts": "run-s setup:root:scripts:clean setup:root:scripts:build",
    "setup:root:scripts:clean": "rimraf scripts/**/{*,.*}.js",
    "setup:root:scripts:build": "tsc --project scripts/tsconfig.json",
    "setup:sub": "yarn workspaces run setup",
    "test:all": "yarn workspaces run test",
    "pub:all": "scripts/publish.sh"
  },
  "devDependencies": {
