{
  "private": true,
  "description": "monorepo for nodejs projects",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:my_profile_app": "npm --prefix packages/my_profile_app run build",
    "compilereactconfig": "tsc --project \"${npm_package_config_react_config_dir}/tsconfig.reactconfig.json\"",
    "postcompilereactconfig": "prettier --write \"${npm_package_config_react_config_dir}/*.js\"",
    "precompilescripts": "rimraf scripts/*.js",
    "compilescripts": "tsc --project ./scripts/tsconfig.json",
    "sortpackagejson": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "testall": "yarn workspaces run test"
  },
  "config": {
    "react_config_dir": "config/react"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/react": "^10.4.8",
    "@testing-library/user-event": "^12.1.1",
    "@types/argparse": "^1.0.38",
    "@types/compression-webpack-plugin": "^4.0.0",
    "@types/dotenv-webpack": "^1.8.0",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-hot-loader": "^4.1.1",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.2",
    "@types/terser-webpack-plugin": "^4.1.0",
    "@types/webpack": "^4.41.21",
    "@types/webpack-bundle-analyzer": "^3.8.0",
    "@types/webpack-dev-server": "^3.11.0",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "argparse": "^1.0.10",
    "compression-webpack-plugin": "^4.0.0",
    "cpx": "^1.5.0",
    "cross-env": "7.0.2",
    "css-loader": "^4.2.1",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^2.0.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^4.3.0",
    "http-server": "^0.12.3",
    "jest": "^26.3.0",
    "package-size": "^2.3.0",
    "prettier": "^2.0.5",
    "react-hot-loader": "^4.12.21",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.44.0",
    "source-map-loader": "^1.0.1",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^4.0.0",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.2",
    "ts-morph": "^7.2.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.1"
  }
}
