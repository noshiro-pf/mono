{
  "private": true,
  "description": "monorepo for nodejs projects",
  "license": "MIT",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "build:apps": "node scripts/build-apps.js",
    "build:utils": "node scripts/build-utils.js",
    "check:all": "run-s ws:build fmt:all ws:lint:fix ws:test type-check:root",
    "check:no-diff": "scripts/git_no_changes.sh",
    "ci:local": "yarn clean && yarn install && yarn ci",
    "ci": "run-s ws:setup ws:gi ws:build fmt:all ws:lint:fix:fast ws:test:fast type-check:root check:no-diff",
    "clean:all": "git clean -xfd",
    "clean": "run-p clean:node_modules clean:wireit",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:wireit": "find . -name '.wireit' -type d -prune -exec rm -rf '{}' +",
    "create:preact-app": "scripts/create_new_preact_app.sh",
    "create:react-app": "scripts/create_new_react_app.sh",
    "create:slides": "scripts/create_new_slides.sh",
    "create:util": "scripts/create_new_util.sh",
    "fmt:all": "prettier --write . > /dev/null",
    "pregen-eslint-rules-type": "rimraf config/eslintrc/eslint-rules/types/*",
    "gen-eslint-rules-type": "config/eslintrc/generate-rules-type/generate-rules-type.sh",
    "gen-eslint-rules-type:compile": "tsc -p config/eslintrc/generate-rules-type/tsconfig.generate-rules-type.json",
    "lint:apps": "node scripts/lint-apps.js",
    "lint:utils": "node scripts/lint-utils.js",
    "pub:all": "scripts/publish.sh",
    "type-check:root:configs": "tsc --project config/tsconfig.json",
    "type-check:root:scripts": "tsc --project scripts/tsconfig.json",
    "type-check:root": "run-s type-check:root:scripts type-check:root:configs",
    "setup:all": "yarn clean && yarn install && yarn ws:setup",
    "ws-run-base": "wsrun --exclude-missing --fast-exit --prefix",
    "ws-run-parallel": "yarn ws-run-base --parallel --concurrency 5",
    "ws-run-serial": "yarn ws-run-base --serial --ifDependency",
    "ws-run-stages": "yarn ws-run-base --stages --ifDependency",
    "ws:build": "yarn ws-run-stages build",
    "ws:clean": "yarn ws-run-parallel clean",
    "ws:gi": "yarn ws-run-parallel gi",
    "ws:lint:fix:fast": "yarn ws-run-parallel lint:fix",
    "ws:lint:fix": "yarn ws-run-serial lint:fix",
    "ws:lint:fast": "yarn ws-run-parallel lint",
    "ws:lint": "yarn ws-run-serial lint",
    "ws:setup": "yarn ws-run-stages setup",
    "ws:test:fast": "yarn ws-run-parallel test",
    "ws:test": "yarn ws-run-serial test",
    "ws:type-check": "yarn ws-run-parallel type-check"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.0"
  },
