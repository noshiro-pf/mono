{
  "private": true,
  "description": "monorepo for nodejs projects",
  "license": "MIT",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "build:apps": "scripts/build_apps.sh",
    "build:utils": "scripts/build_utils.sh",
    "check:after-setup": "run-s build:apps lint:all test:all check:no-changes",
    "check:all": "yarn && run-s setup:configs build:utils check:after-setup",
    "check:no-changes": "yarn fmt:all && scripts/git_no_changes.sh",
    "clean:all": "run-s clean:root clean:sub clean:node_modules",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:root": "run-s clean:root:*",
    "clean:root:config": "rimraf config/**/{*,.*}.js",
    "clean:root:scripts": "rimraf scripts/**/{*,.*}.js",
    "clean:sub": "yarn workspaces run clean",
    "create:preactapp": "scripts/create_new_preact_app.sh",
    "create:reactapp": "scripts/create_new_react_app.sh",
    "create:slides": "scripts/create_new_slides.sh",
    "create:util": "scripts/create_new_util.sh",
    "fmt:all": "prettier --write . > /dev/null",
    "lint:all": "yarn workspaces run lint",
    "setup:all": "run-s setup:configs build:utils",
    "setup:configs": "run-s setup:root setup:sub",
    "presetup:root": "yarn clean:root",
    "setup:root": "run-s setup:root:configs setup:root:scripts",
    "presetup:root:configs": "yarn clean:root:config",
    "setup:root:configs": "tsc --project config/tsconfig.config.json",
    "presetup:root:scripts": "yarn clean:root:scripts",
    "setup:root:scripts": "tsc --project scripts/tsconfig.json",
    "setup:sub": "yarn workspaces run setup",
    "test:all": "yarn workspaces run test"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@solid/eslint-config-base": "^0.1.8",
    "@testing-library/jest-dom": "^5.11.3",
    "@testing-library/react": "^10.4.8",
    "@testing-library/user-event": "^12.1.1",
    "@types/argparse": "^1.0.38",
    "@types/compression-webpack-plugin": "^4.0.0",
    "@types/copy-webpack-plugin": "^6.0.0",
    "@types/dotenv-webpack": "^1.8.0",
    "@types/eslint": "^7.2.6",
    "@types/node": "^14.0.27",
    "@types/nodemailer": "^6.4.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-hot-loader": "^4.1.1",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.2",
    "@types/terser-webpack-plugin": "^4.1.0",
    "@types/uuid": "^8.3.0",
    "@types/webpack": "^4.41.21",
    "@types/webpack-bundle-analyzer": "^3.8.0",
    "@types/webpack-dev-server": "^3.11.0",
    "@types/webpack-node-externals": "^2.5.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "argparse": "^1.0.10",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "compression-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^6.1.0",
    "cpx": "^1.5.0",
    "cross-env": "7.0.2",
    "css-loader": "^4.2.1",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^2.0.0",
    "eslint": "^7.18.0",
    "eslint-config-preact": "^1.1.3",
    "eslint-config-prettier": "^8.2.0",
    "eslint-gitignore": "^0.1.0",
    "eslint-plugin-functional": "^3.2.1",
