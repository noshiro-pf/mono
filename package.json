    "packages/utils/react-blueprintjs-utils",
    "packages/utils/react-material-ui-utils",
    "packages/utils/goober",
    "packages/utils/solid-styled-components",
    "packages/apps/algo_app",
    "packages/apps/annotation_tool",
    "packages/apps/cant_stop_probability",
    "packages/apps/catan_dice_app",
    "packages/apps/color_demo_app",
    "packages/apps/event_schedule_app_shared",
    "packages/apps/event_schedule_app",
    "packages/apps/event_schedule_app/functions",
    "packages/apps/housing_loan_calculator",
