{
  "name": "rnjs",
  "version": "1.2.0",
  "description": "Reactive Programming Library for TypeScript/JavaScript",
  "license": "MIT",
  "author": "noshiro",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "_script_formatchanged": "node ../../scripts_dist/format_changed",
    "_script_formatglob": "node ../../scripts_dist/format_glob",
    "_script_genindex": "bash ../../scripts/index_ts_generator.sh",
    "prebuild": "rimraf lib",
    "build": "webpack",
    "compilewebpackconfig": "tsc ./webpack.config.ts && prettier --write ./webpack.config.js",
    "fmt": "yarn _script_formatchanged master",
    "fmtall": "yarn _script_formatglob \"./src/**/*.{ts,tsx}\"",
    "fmtstaged": "yarn _script_formatchanged",
    "gi": "yarn _script_genindex ./src",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest --watch --config jest.config.json"
  },
  "devDependencies": {
    "cross-env": "5.0.5"
  }
}
