{
  "name": "@noshiro/strict-ts-lib",
  "version": "1.0.0",
  "private": false,
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "autofix": "wireit",
    "fmt": "yarn zz:cmd:prettier .",
    "gen": "run-s gen:d gen:packages",
    "gen:d": "run-s gen:d:eslint-fixed gen:d:final",
    "gen:d:eslint-fixed": "./scripts/gen-eslint-fixed.sh",
    "gen:d:final": "./scripts/gen-final.sh",
    "gen:packages": "./scripts/gen-packages.sh",
    "lint": "wireit",
    "tsc": "yarn type-check",
    "tscw": "tsc --noEmit --watch",
    "type-check": "wireit",
    "zz:cmd:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint",
    "zz:cmd:eslint:scripts": "yarn zz:cmd:eslint --config eslint.config.js scripts --cache --cache-location ./scripts/.eslintcache",
    "zz:cmd:prettier": "prettier --cache --cache-strategy content --ignore-path ../../../.prettierignore --write"
  },
  "devDependencies": {
    "@noshiro/eslint-utils": "*",
    "@noshiro/mono-scripts": "*",
    "@noshiro/ts-type-utils-no-stdlib": "*"
  },
  "wireit": {
    "type-check": {
      "command": "tsc -p ./configs/tsconfig.type-check.json",
      "files": [
        "./test/**/*.mts",
        "./configs/tsconfig.type-check.json",
        "../../../config/tsconfig/**"
      ],
      "output": []
    },
    "lint": {
      "dependencies": [
        "../../../packages/utils/eslint-utils:build"
      ],
      "command": "yarn zz:cmd:eslint:scripts",
      "files": [
        "./scripts/**/*.{mjs,mts,js,ts,jsx,tsx,d.ts}",
        "./eslint.config.js",
        "./package.json",
        "./tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**"
      ],
      "output": []
    },
    "autofix": {
      "command": "yarn zz:cmd:eslint eslint-fixed/ --config ./configs/eslint.config.gen.mjs --fix --cache --cache-location ./.eslintcache",
      "files": [
        "./eslint-fixed/**/*.d.ts",
        "./configs/eslint.config.gen.mjs",
        "./package.json",
        "./tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**"
      ],
      "output": []
    }
  }
}
