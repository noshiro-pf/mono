{
  "name": "@noshiro/strict-typescript-lib-source",
  "version": "1.0.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/noshiro-pf/mono.git"
  },
  "license": "MIT",
  "author": "noshiro-pf <noshiro.pf@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "wireit",
    "clean": "run-p clean:**",
    "clean:build": "rimraf dist",
    "clean:wireit": "rimraf .wireit/**",
    "code-diffs:branded": "zx ./dist/open-diff-in-code.mjs branded",
    "code-diffs:normal": "zx ./dist/open-diff-in-code.mjs normal",
    "fmt": "yarn zz:prettier ..",
    "fmt:diff": "wireit",
    "gen": "wireit",
    "gen:full": "wireit",
    "gen:lib-files": "wireit",
    "gen:min": "wireit",
    "gen:packages": "wireit",
    "lint": "yarn zz:eslint:src",
    "lint:fix": "yarn zz:eslint:src --fix",
    "test": "run-p test:normal test:branded",
    "test:branded": "tsc -p ../output-branded/tsconfig.json",
    "test:normal": "tsc -p ../output/tsconfig.json",
    "testw:branded": "yarn test-branded --watch",
    "testw:normal": "yarn test --watch",
    "tsc": "tsc --noEmit",
    "tscw": "tsc --noEmit --watch",
    "type-check": "tsc --noEmit",
    "zz:eslint": "TIMING=1 eslint",
    "zz:eslint:src": "yarn zz:eslint --config eslint.config.js src/**/*.mts",
    "zz:prettier": "prettier --ignore-path ../.prettierignore --write --log-level warn"
  },
  "devDependencies": {
    "@noshiro/mono-utils": "*",
    "@noshiro/ts-type-utils": "*",
    "@types/eslint": "9.6.1",
    "@typescript-eslint/eslint-plugin": "8.24.1",
    "@typescript-eslint/parser": "8.24.1",
    "eslint": "9.21.0",
    "eslint-plugin-functional": "7.1.0"
  },
  "wireit": {
    "build": {
      "command": "tsc --project ./configs/tsconfig.build.json",
      "clean": true,
      "output": [
        "./dist/**/*"
      ]
    },
    "fmt:diff": {
      "dependencies": [
        "build"
      ],
      "command": "zx ./dist/commands/fmt-diff.mjs"
    },
    "gen": {
      "dependencies": [
        "build"
      ],
      "command": "zx ./dist/commands/gen.mjs"
    },
    "gen:full": {
      "dependencies": [
        "build"
      ],
      "command": "zx ./dist/commands/gen-full.mjs"
    },
    "gen:min": {
      "dependencies": [
        "build"
      ],
      "command": "zx ./dist/commands/gen-min.mjs"
    },
    "gen:lib-files": {
      "dependencies": [
        "build"
      ],
      "command": "zx ./dist/commands/gen-lib-files.mjs"
    },
    "gen:packages": {
      "dependencies": [
        "build"
      ],
      "command": "zx ./dist/commands/gen-packages.mjs"
    },
    "publish-packages": {
      "dependencies": [
        "build"
      ],
      "command": "zx ./dist/commands/publish-packages.mjs"
    }
  }
}
