{
  "name": "rnjs2",
  "version": "1.0.0",
  "description": "Reactive Programming Library for TypeScript/JavaScript",
  "license": "MIT",
  "author": "noshiro",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "_script_formatchanged": "node ${npm_package_config_scripts_dir}/format_changed",
    "_script_formatglob": "node ${npm_package_config_scripts_dir}/format_glob",
    "_script_genindex": "bash ${npm_package_config_scripts_dir}/index_ts_generator.sh",
    "prebuild": "rimraf ${npm_package_config_lib_dir}",
    "build": "webpack --config ${npm_package_config_config_dir}/webpack.config.js",
    "compilegenpipabletypedefscript": "tsc --project \"${npm_package_config_scripts_local_dir}/tsconfig.json\"",
    "compilewebpackconfig": "tsc ${npm_package_config_config_dir}/webpack.config.ts",
    "postcompilewebpackconfig": "prettier --write ${npm_package_config_config_dir}/webpack.config.js",
    "fmt": "yarn _script_formatchanged master",
    "fmtall": "yarn _script_formatglob \"./src/**/*.{ts,tsx}\"",
    "fmtstaged": "yarn _script_formatchanged",
    "genpipabletypedef": "node \"${npm_package_config_scripts_local_dir}/gen_pipable_type_def\" 12 \"./src/abstract_class/pipable.ts\"",
    "postgenpipabletypedef": "yarn _script_formatglob \"./src/abstract_class/pipable.ts\"",
    "gi": "yarn _script_genindex ./src",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "prestart": "rimraf ${npm_package_config_dist_dir}",
    "start": "tsc --project \"${npm_package_config_config_dir}/tsconfig.dev.json\" && node ${npm_package_config_dist_dir}/test/preview-main.js",
    "test": "jest --watch --config ${npm_package_config_config_dir}/jest.config.json"
  },
  "config": {
    "config_dir": "config",
    "dist_dir": "dist",
    "lib_dir": "lib",
    "scripts_dir": "../../scripts",
    "scripts_local_dir": "./scripts"
  }
}
