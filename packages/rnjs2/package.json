{
  "name": "rnjs2",
  "version": "1.0.0",
  "description": "Reactive Programming Library for TypeScript/JavaScript",
  "license": "MIT",
  "author": "noshiro",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "_script_formatchanged": "node ${npm_package_config_scripts_dir}/format_changed",
    "_script_formatglob": "node ${npm_package_config_scripts_dir}/format_glob",
    "_script_genindex": "bash ${npm_package_config_scripts_dir}/index_ts_generator.sh",
    "prebuild": "rimraf \"${npm_package_config_lib_dir}\"",
    "build": "webpack --config \"${npm_package_config_webpack_config_js}\"",
    "compilegenpipabletypedefscript": "tsc --project \"${npm_package_config_gen_pipable_ts_config}\"",
    "precompilepreview": "rimraf \"${npm_package_config_dist_dir}\"",
    "compilepreview": "tsc --project \"${npm_package_config_tsconfig_dev}\"",
    "compilewebpackconfig": "tsc --project \"${npm_package_config_tsconfig_for_webpack_config}\"",
    "postcompilewebpackconfig": "prettier --write \"${npm_package_config_webpack_config_js}\"",
    "fmt": "yarn _script_formatchanged master",
    "fmtall": "yarn _script_formatglob \"./src/**/*.ts\"",
    "fmtstaged": "yarn _script_formatchanged",
    "genpipabletypedef": "node \"${npm_package_config_gen_pipable_def}\" ${npm_package_config_pipable_max_length} \"${npm_package_config_pipable_ts_path}\"",
    "postgenpipabletypedef": "yarn _script_formatglob \"${npm_package_config_pipable_ts_path}\"",
    "gi": "yarn _script_genindex ./src",
    "lint": "eslint src/ --ext .js,.ts",
    "start": "node \"${npm_package_config_start_script}\"",
    "test": "jest --watch --config \"${npm_package_config_jest_config}\""
  },
  "config": {
    "dist_dir": "dist",
    "gen_pipable_def": "scripts/gen_pipable_type_def",
    "gen_pipable_ts_config": "scripts/tsconfig.json",
    "jest_config": "jest.config.json",
    "lib_dir": "lib",
    "pipable_max_length": 13,
    "pipable_ts_path": "./src/abstract_class/pipable.ts",
    "scripts_dir": "../../scripts",
    "start_script": "dist/test/preview-main.js",
    "tsconfig_dev": "config/tsconfig.dev.json",
    "tsconfig_for_webpack_config": "config/tsconfig.webpackconfig.json",
    "webpack_config_js": "config/webpack.config.js",
    "webpack_config_ts": "config/webpack.config.ts"
  }
}
