{
  "moduleNameMapper": {
    "^@noshiro/(.*)$": "<rootDir>/../../utils/$1/src"
  },
  "rootDir": "../",
  "roots": ["<rootDir>/src"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsconfig": "<rootDir>/config/tsconfig.test.json"
    }
  },
  "testMatch": ["<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"],
  "testEnvironment": "jsdom"
}
