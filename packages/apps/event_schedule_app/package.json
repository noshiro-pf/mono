{
  "name": "@noshiro/event-schedule-app",
  "version": "5.0.1",
  "private": false,
  "license": "MIT",
  "scripts": {
    "_prettier": "prettier --ignore-path ${npm_package_config_root_dir}/.prettierignore  --write",
    "_script_genindex": "bash ${npm_package_config_root_dir}/scripts/index_ts_generator.sh",
    "prebuild": "yarn clean:build",
    "build": "webpack --config config/webpack.prod.js",
    "postbuild": "cpx \"public/**\" ${npm_package_config_build_dir}",
    "clean": "run-p clean:**",
    "clean:build": "rimraf ${npm_package_config_build_dir}",
    "clean:cache": "rimraf .firebase",
    "cy:open": "cypress open",
    "cy:record": "cypress run --record --key ${CYPRESS_RECORD_KEY}",
    "fb": "firebase",
    "fb:deploy": "firebase deploy",
    "fb:deploy:functions": "firebase deploy --only functions",
    "fb:deploy:hosting": "firebase deploy --only hosting",
    "fb:export": "node ./scripts/export_firestore > ./scripts/firestore_backup.json",
    "fb:init": "firebase init",
    "fb:login": "firebase login",
    "fb:write": "node ./scripts/write_firestore",
    "fmt": "yarn _prettier .",
    "gi": "yarn _script_genindex ./src --min-depth 1 --ignore \"(assets|global)\"",
    "lint": "eslint src/ --ext .ts,.tsx",
    "lint:deps": "yarn lint --no-eslintrc --config ${npm_package_config_root_dir}/config/eslintrc/.eslintrc-no-extraneous-dependency.js",
    "lint:fix": "yarn lint --fix",
    "serve": "http-server ./build",
    "setup": "run-s setup:service-account-key setup:scripts",
    "setup:scripts": "tsc --project config/tsconfig.scripts.json",
    "setup:service-account-key": "touch ./scripts/service-account-key.json",
    "start": "webpack serve --config config/webpack.dev.js",
    "test": "jest --config config/jest.config.json --passWithNoTests",
    "tsc": "tsc --noEmit",
    "type-check": "tsc --noEmit"
  },
  "config": {
    "build_dir": "build",
    "root_dir": "../../.."
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@blueprintjs/core": "^4.1.2",
    "@blueprintjs/datetime": "^4.1.2",
    "@blueprintjs/icons": "^4.2.3",
    "@noshiro/deep-object-diff": "*",
    "@noshiro/event-schedule-app-shared": "5.0.4",
    "@noshiro/fast-deep-equal": "*",
    "@noshiro/react-utils": "*",
    "@noshiro/syncflow": "*",
    "@noshiro/syncflow-react-hooks": "*",
    "@noshiro/tiny-router-observable": "*",
    "@noshiro/tiny-router-react-hooks": "*",
    "@noshiro/ts-utils": "*",
    "@noshiro/ts-utils-additional": "*",
    "firebase": "^9.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.0",
    "url-regex": "^5.0.0"
  },
  "devDependencies": {
    "@noshiro/global-react": "*",
    "@noshiro/global-react-utils": "*",
    "@noshiro/global-styled-components": "*",
    "@noshiro/global-syncflow": "*",
    "@noshiro/global-syncflow-react-hooks": "*",
    "@noshiro/global-ts-utils": "*",
    "@noshiro/ts-type-utils": "*",
    "cypress": "^9.5.4"
  }
}
