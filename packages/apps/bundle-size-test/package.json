{
  "name": "@noshiro/bundle-size-test",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "scripts": {
    "build": "wireit",
    "clean": "rimraf build .firebase",
    "fmt": "prettier --ignore-path ../../../.prettierignore  --write .",
    "lint": "wireit",
    "lint:fix": "yarn z:lint --fix",
    "z:lint": "eslint src/ --ext .ts,.tsx --color --cache --cache-location .eslintcache"
  },
  "dependencies": {
    "@noshiro/ts-utils": "*"
  },
  "devDependencies": {
    "@noshiro/global-ts-utils": "*",
    "@noshiro/ts-type-utils": "*"
  },
  "wireit": {
    "build": {
      "command": "webpack --config config/webpack.prod.js",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "config/webpack.prod.js",
        "config/env.js",
        "config/paths.js",
        "../../../config/webpackconfig/react",
        "../../../config/tsconfig/tsconfig.preact.nolib.json",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [
        "build/**"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "lint": {
      "command": "yarn z:lint",
      "files": [
        "src/**/*.{ts,tsx}",
        ".eslintignore",
        ".eslintrc.cjs",
        "../../../package.json",
        "package.json",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.preact.nolib.json",
        "../../../config/eslintrc/**",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    }
  }
}
