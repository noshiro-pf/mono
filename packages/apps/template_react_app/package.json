{
  "name": "@mono/react-app-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prebuild": "yarn clean:build",
    "build": "webpack --config \"${npm_package_config_webpack_prod_config}\"",
    "postbuild": "cpx \"${npm_package_config_public_dir}/**\" \"${npm_package_config_dist_dir}\"",
    "clean": "npm-run-all clean:*",
    "clean:build": "rimraf ${npm_package_config_dist_dir}",
    "clean:config": "rimraf config/**/*.js scripts/**/*.js",
    "predeploy": "yarn build",
    "deploy": "firebase deploy",
    "fb:init": "firebase init",
    "fb:login": "firebase login",
    "fmt": "prettier --write .",
    "lint": "eslint src/ --ext .ts,.tsx",
    "serve": "firebase serve",
    "setup": "yarn setup:webpackconfig",
    "setup:webpackconfig": "tsc --project \"${npm_package_config_tsconfig_for_webpack}\"",
    "start": "webpack-dev-server --config \"${npm_package_config_webpack_dev_config}\"",
    "test": "jest --config \"${npm_package_config_jest_config}\" --passWithNoTests",
    "testw": "yarn test --watch"
  },
  "config": {
    "config_dir": "config",
    "dist_dir": "build",
    "jest_config": "config/jest.config.json",
    "public_dir": "public",
    "scripts_dir": "../../../scripts",
    "tsconfig_for_webpack": "config/tsconfig.webpackconfig.json",
    "webpack_dev_config": "config/webpack.dev.js",
    "webpack_prod_config": "config/webpack.prod.js"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@mono/react-utils": "*",
    "@mono/ts-utils": "*",
    "react": "^17.0.1",
    "react-dom": "^17.0.0",
    "styled-components": "^5.1.1"
  }
}
