{
  "moduleNameMapper": {
    "^@noshiro/(.*)$": "<rootDir>/../../utils/$1/src"
  },
  "rootDir": "../",
  "roots": ["<rootDir>/src"],
  "transform": {
    "^.+\\.(ts|tsx)$": [
      "ts-jest",
      {
        "tsconfig": "<rootDir>/config/tsconfig.test.json"
      }
    ]
  },
  "testMatch": ["<rootDir>/src/**/*.test.{ts,tsx}"],
  "testEnvironment": "jsdom",
  "setupFiles": ["@noshiro/global-ts-utils"]
}
