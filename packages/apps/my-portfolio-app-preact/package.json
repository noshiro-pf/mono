{
  "name": "@noshiro/my-portfolio-app-preact",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "scripts": {
    "build": "run-s build:bundle build:copy-public",
    "build:bundle": "wireit",
    "build:copy-public": "wireit",
    "clean": "rimraf build .firebase",
    "fb:deploy": "wireit",
    "fb:init": "firebase init",
    "fb:login": "firebase login",
    "fb:login:ci": "firebase login:ci",
    "fmt": "prettier --ignore-path ../../../.prettierignore  --write .",
    "gi": "wireit",
    "lint": "wireit",
    "lint:fix": "yarn lint --fix",
    "serve": "firebase serve",
    "start": "run-p start:**",
    "start:dev-server": "webpack serve --config config/webpack.dev.js",
    "test": "wireit",
    "tscw": "tsc --noEmit --watch",
    "type-check": "wireit"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@noshiro/goober": "*",
    "@noshiro/preact-utils": "*",
    "@noshiro/resize-observer-preact-hooks": "*",
    "@noshiro/tiny-router-preact-hooks": "*",
    "@noshiro/ts-utils": "*",
    "preact": "^10.4.7",
    "preact-markdown": "^2.1.0",
    "preact-media-hook": "^1.0.3"
  },
  "devDependencies": {
    "@noshiro/global-ts-utils": "*",
    "@noshiro/ts-type-utils": "*"
  },
  "wireit": {
    "type-check": {
      "command": "tsc --noEmit",
      "files": [
        "src/**/*.{ts,tsx}",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.preact.nolib.json",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "build:bundle": {
      "command": "webpack --config config/webpack.prod.js",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "config/webpack.prod.js",
        "config/env.js",
        "config/paths.js",
        "../../../config/webpackconfig/react",
        "../../../config/tsconfig/tsconfig.preact.nolib.json",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [
        "build/**"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "build:copy-public": {
      "command": "cpx \"public/**\" build"
    },
    "fb:deploy": {
      "command": "firebase deploy",
      "dependencies": [
        "build"
      ]
    },
    "gi": {
      "command": "bash ../../../scripts/index_ts_generator.sh ./src --min-depth 1 --ignore assets",
      "clean": false,
      "files": [
        "../../../scripts/index_ts_generator.sh",
        "src/**"
      ],
      "packageLocks": []
    },
    "lint": {
      "command": "eslint src/ --ext .ts,.tsx --color --cache --cache-location .eslintcache ",
      "dependencies": [
        "type-check"
      ],
      "files": [
        "src/**/*.{ts,tsx}",
        ".eslintignore",
        ".eslintrc.cjs",
        "../../../package.json",
        "package.json",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.preact.nolib.json",
        "../../../config/eslintrc/**",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "test": {
      "command": "jest --config config/jest.config.json --passWithNoTests",
      "dependencies": [
        "type-check"
      ],
      "files": [
        "config/jest.config.json",
        "src/**"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    }
  }
}
