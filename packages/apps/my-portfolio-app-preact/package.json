{
  "name": "@noshiro/my-portfolio-app-preact",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": true,
  "type": "module",
  "browser": "src/main.tsx",
  "scripts": {
    "build": "wireit",
    "build:no-minify": "yarn build --minify false",
    "clean": "run-p clean:**",
    "clean:build": "rimraf build",
    "clean:eslintcache": "rimraf .eslintcache",
    "clean:firebase": "rimraf .firebase",
    "clean:wireit": "rimraf .wireit/**",
    "cy:open": "yarn workspace @noshiro/my-portfolio-app-preact-cypress cy:open",
    "cy:record": "yarn workspace @noshiro/my-portfolio-app-preact-cypress cy:record",
    "cy:run:chrome": "yarn workspace @noshiro/my-portfolio-app-preact-cypress cy:run:chrome",
    "cy:run:firefox": "yarn workspace @noshiro/my-portfolio-app-preact-cypress cy:run:firefox",
    "fb": "firebase",
    "fb:deploy": "wireit",
    "fb:deploy:hosting": "wireit",
    "fb:init": "firebase init",
    "fb:login": "firebase login",
    "fb:login:ci": "firebase login:ci",
    "fmt": "yarn zz:cmd:prettier .",
    "gi": "bash ../../../scripts/bash/index_ts_generator.sh ./src --min-depth 1 --ignore assets",
    "lint": "run-p lint:src lint:cy",
    "lint:cy": "yarn zz:cmd:eslint:cy",
    "lint:fix": "run-p lint:fix:src lint:fix:cy",
    "lint:fix:cy": "yarn zz:cmd:eslint:cy --fix",
    "lint:fix:src": "yarn zz:cmd:eslint:src --fix",
    "lint:src": "yarn zz:cmd:eslint:src",
    "preview": "yarn zz:cmd:vite:preview",
    "serve": "firebase serve",
    "start": "run-p start:**",
    "start:dev-server": "yarn zz:cmd:vite --port 5180",
    "test": "yarn zz:cmd:vitest run",
    "testw": "yarn zz:cmd:vitest watch",
    "tsc": "yarn type-check",
    "tscw": "tsc --noEmit --watch",
    "type-check": "run-p type-check:src type-check:cy",
    "type-check:cy": "tsc --noEmit -p ./cypress/tsconfig.json",
    "type-check:src": "wireit",
    "z:setup": "run-p z:setup:gen-global-dts",
    "z:setup:gen-global-dts": "node ./scripts/gen-global-dts.mjs",
    "zz:cmd:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint",
    "zz:cmd:eslint:cy": "yarn zz:cmd:eslint --config ./cypress/eslint.config.js './cypress/**/*.ts' --cache --cache-location ./cypress/.eslintcache",
    "zz:cmd:eslint:print-config": "yarn zz:cmd:eslint --print-config src/main.tsx",
    "zz:cmd:eslint:src": "yarn zz:cmd:eslint --config eslint.config.js './src/**/*' --cache --cache-location ./src/.eslintcache",
    "zz:cmd:prettier": "prettier --cache --cache-strategy content --ignore-path ../../../.prettierignore --write",
    "zz:cmd:vite": "vite --config configs/vite.config.ts",
    "zz:cmd:vite:preview": "yarn zz:cmd:vite preview",
    "zz:cmd:vitest": "vitest --config ./configs/vite.config.ts"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@noshiro/goober": "*",
    "@noshiro/preact-utils": "*",
    "@noshiro/resize-observer-preact-hooks": "*",
    "@noshiro/syncflow": "*",
    "@noshiro/syncflow-preact-hooks": "*",
    "@noshiro/tiny-router-observable": "*",
    "@noshiro/tiny-router-preact-hooks": "*",
    "@noshiro/ts-utils": "*",
    "preact": "^10.23.1",
    "preact-media-hook": "^1.0.3"
  },
  "devDependencies": {
    "@noshiro/eslint-configs": "*",
    "@noshiro/global-goober": "*",
    "@noshiro/global-preact": "*",
    "@noshiro/global-preact-utils": "*",
    "@noshiro/global-syncflow": "*",
    "@noshiro/global-syncflow-preact-hooks": "*",
    "@noshiro/global-tiny-router-observable": "*",
    "@noshiro/global-tiny-router-preact-hooks": "*",
    "@noshiro/global-ts-utils": "*",
    "@noshiro/mono-scripts": "*",
    "@noshiro/ts-type-utils": "*",
    "@noshiro/ts-utils": "*"
  },
  "wireit": {
    "type-check:src": {
      "dependencies": [
        "z:setup"
      ],
      "command": "tsc --noEmit"
    },
    "build": {
      "dependencies": [
        "clean:build",
        "type-check"
      ],
      "command": "yarn zz:cmd:vite build"
    },
    "fb:deploy": {
      "dependencies": [
        "build"
      ],
      "command": "firebase deploy"
    },
    "fb:deploy:hosting": {
      "dependencies": [
        "build"
      ],
      "command": "firebase deploy --only hosting"
    }
  }
}
