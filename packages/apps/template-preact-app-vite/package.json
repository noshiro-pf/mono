{
  "name": "@noshiro/template-preact-app-vite",
  "version": "0.0.0",
  "private": false,
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": true,
  "type": "module",
  "browser": "src/main.tsx",
  "scripts": {
    "build": "wireit",
    "build:no-minify": "yarn build --minify false",
    "clean": "run-p clean:**",
    "clean:build": "rimraf build",
    "clean:eslintcache": "rimraf .eslintcache",
    "clean:firebase": "rimraf .firebase",
    "clean:wireit": "rimraf .wireit/**",
    "cy:open": "yarn workspace @noshiro/template-preact-app-vite-cypress cy:open",
    "cy:record": "yarn workspace @noshiro/template-preact-app-vite-cypress cy:record",
    "cy:run:chrome": "yarn workspace @noshiro/template-preact-app-vite-cypress cy:run:chrome",
    "cy:run:firefox": "yarn workspace @noshiro/template-preact-app-vite-cypress cy:run:firefox",
    "fb": "firebase",
    "fb:deploy": "wireit",
    "fb:deploy:hosting": "wireit",
    "fb:init": "firebase init",
    "fb:login": "firebase login",
    "fb:login:ci": "firebase login:ci",
    "fmt": "yarn zz:cmd:prettier .",
    "gi": "wireit",
    "lint": "run-p lint:src lint:cy",
    "lint:cy": "wireit",
    "lint:fix": "run-p lint:fix:src lint:fix:cy",
    "lint:fix:cy": "wireit",
    "lint:fix:src": "wireit",
    "lint:src": "wireit",
    "preview": "yarn zz:cmd:vite:preview",
    "serve": "firebase serve",
    "start": "run-p start:**",
    "start:dev-server": "wireit",
    "test": "wireit",
    "testw": "yarn zz:cmd:vitest watch",
    "tsc": "yarn type-check",
    "tscw": "tsc --noEmit --watch",
    "type-check": "run-p type-check:src type-check:cy",
    "type-check:cy": "wireit",
    "type-check:src": "wireit",
    "z:setup": "run-p z:setup:gen-global-dts",
    "z:setup:gen-global-dts": "node ./scripts/gen-global-dts.mjs",
    "zz:cmd:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint",
    "zz:cmd:eslint:cy": "yarn zz:cmd:eslint --config ./cypress/eslint.config.js './cypress/**/*.ts' --cache --cache-location ./cypress/.eslintcache",
    "zz:cmd:eslint:print-config": "yarn zz:cmd:eslint --print-config src/main.tsx",
    "zz:cmd:eslint:src": "yarn zz:cmd:eslint --config eslint.config.js './src/**/*' --cache --cache-location ./src/.eslintcache",
    "zz:cmd:prettier": "prettier --cache --cache-strategy content --ignore-path ../../../.prettierignore --write",
    "zz:cmd:vite": "vite --config configs/vite.config.ts",
    "zz:cmd:vite:preview": "yarn zz:cmd:vite preview",
    "zz:cmd:vitest": "vitest --config ./configs/vite.config.ts"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@noshiro/goober": "*",
    "@noshiro/io-ts": "*",
    "@noshiro/preact-utils": "*",
    "@noshiro/resize-observer-preact-hooks": "*",
    "@noshiro/syncflow": "*",
    "@noshiro/syncflow-preact-hooks": "*",
    "@noshiro/tiny-router-observable": "*",
    "@noshiro/tiny-router-preact-hooks": "*",
    "@noshiro/ts-utils": "*",
    "@noshiro/ts-utils-additional": "*",
    "preact": "^10.19.6"
  },
  "devDependencies": {
    "@noshiro/eslint-utils": "*",
    "@noshiro/global-goober": "*",
    "@noshiro/global-preact": "*",
    "@noshiro/global-preact-utils": "*",
    "@noshiro/global-syncflow": "*",
    "@noshiro/global-syncflow-preact-hooks": "*",
    "@noshiro/global-tiny-router-observable": "*",
    "@noshiro/global-tiny-router-preact-hooks": "*",
    "@noshiro/global-ts-utils": "*",
    "@noshiro/mono-scripts": "*",
    "@noshiro/ts-type-utils-no-stdlib": "*",
    "@noshiro/ts-utils": "*"
  },
  "wireit": {
    "type-check:src": {
      "dependencies": [
        "z:setup"
      ],
      "command": "tsc --noEmit",
      "files": [
        "./**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "output": []
    },
    "type-check:cy": {
      "command": "tsc --noEmit -p ./cypress/tsconfig.json",
      "files": [
        "./cypress/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./cypress/tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "output": []
    },
    "gi": {
      "command": "bash ../../../scripts/bash/index_ts_generator.sh ./src --min-depth 1 --ignore assets",
      "files": [
        "../../../scripts/bash/index_ts_generator.sh",
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}"
      ],
      "clean": false,
      "output": [
        "src/*/**/index.ts"
      ],
      "packageLocks": []
    },
    "build": {
      "dependencies": [
        "type-check"
      ],
      "command": "yarn zz:cmd:vite build",
      "files": [
        "./public/**",
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./configs/vite.config.ts",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "output": [
        "build/**"
      ]
    },
    "test": {
      "command": "yarn zz:cmd:vitest run",
      "files": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./configs/vite.config.ts",
        "./configs/tsconfig.test.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "output": []
    },
    "lint:src": {
      "dependencies": [
        "../../../packages/utils/eslint-utils:build"
      ],
      "command": "yarn zz:cmd:eslint:src",
      "files": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./eslint.config.js",
        "./package.json",
        "./tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "output": []
    },
    "lint:fix:src": {
      "dependencies": [
        "../../../packages/utils/eslint-utils:build"
      ],
      "command": "yarn zz:cmd:eslint:src --fix",
      "files": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./eslint.config.js",
        "./package.json",
        "./tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "clean": false,
      "output": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}"
      ]
    },
    "lint:cy": {
      "dependencies": [
        "../../../packages/utils/eslint-utils:build"
      ],
      "command": "yarn zz:cmd:eslint:cy",
      "files": [
        "./cypress/**/*.ts",
        "./cypress/eslint.config.js",
        "./cypress/tsconfig.json",
        "./package.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "output": []
    },
    "lint:fix:cy": {
      "dependencies": [
        "../../../packages/utils/eslint-utils:build"
      ],
      "command": "yarn zz:cmd:eslint:cy --fix",
      "files": [
        "./cypress/**/*.ts",
        "./cypress/eslint.config.js",
        "./cypress/tsconfig.json",
        "./package.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "clean": false,
      "output": [
        "./cypress/**/*.ts"
      ]
    },
    "fb:deploy": {
      "dependencies": [
        "build"
      ],
      "command": "firebase deploy"
    },
    "fb:deploy:hosting": {
      "dependencies": [
        "build"
      ],
      "command": "firebase deploy --only hosting"
    },
    "start:dev-server": {
      "service": true,
      "command": "yarn zz:cmd:vite --port 5180"
    }
  }
}
