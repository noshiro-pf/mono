{
  "name": "@noshiro/preact-app-template-vite",
  "version": "0.0.0",
  "private": false,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "run-s build:bundle",
    "build:bundle": "wireit",
    "clean": "rimraf dist .firebase",
    "fb:deploy": "wireit",
    "fb:init": "firebase init",
    "fb:login": "firebase login",
    "fb:login:ci": "firebase login:ci",
    "fmt": "prettier --ignore-path ../../../.prettierignore  --write .",
    "gi": "wireit",
    "lint": "wireit",
    "lint:fix": "yarn lint --fix",
    "preview": "yarn vite-default preview",
    "serve": "firebase serve",
    "start": "run-p start:**",
    "start:dev-server": "yarn vite-default",
    "test": "wireit",
    "testw": "jest --config config/jest.config.json --passWithNoTests --watch",
    "tscw": "tsc --noEmit --watch",
    "type-check": "wireit",
    "type-check:watch": "tsc --noEmit --watch",
    "vite-default": "vite --config config/vite.config.ts"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@noshiro/goober": "*",
    "@noshiro/io-ts": "*",
    "@noshiro/preact-utils": "*",
    "@noshiro/resize-observer-preact-hooks": "*",
    "@noshiro/syncflow": "*",
    "@noshiro/syncflow-preact-hooks": "*",
    "@noshiro/tiny-router-observable": "*",
    "@noshiro/tiny-router-preact-hooks": "*",
    "@noshiro/ts-utils": "*",
    "@noshiro/ts-utils-additional": "*",
    "preact": "^10.11.3"
  },
  "devDependencies": {
    "@noshiro/global-goober": "*",
    "@noshiro/global-preact": "*",
    "@noshiro/global-preact-utils": "*",
    "@noshiro/global-syncflow": "*",
    "@noshiro/global-syncflow-preact-hooks": "*",
    "@noshiro/global-tiny-router-observable": "*",
    "@noshiro/global-tiny-router-preact-hooks": "*",
    "@noshiro/global-ts-utils": "*",
    "@noshiro/ts-type-utils": "*"
  },
  "wireit": {
    "type-check": {
      "command": "tsc --noEmit",
      "files": [
        "src/**/*.{ts,tsx}",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.preact.nolib.json",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "build:bundle": {
      "command": "tsc && vite build",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "config/vite.config.ts",
        "../../../config/tsconfig/tsconfig.preact.nolib.json",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [
        "dist/**"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "fb:deploy": {
      "command": "firebase deploy",
      "dependencies": [
        "build"
      ]
    },
    "gi": {
      "command": "bash ../../../scripts/index_ts_generator.sh ./src --min-depth 1 --ignore assets",
      "clean": false,
      "files": [
        "../../../scripts/index_ts_generator.sh",
        "src/**"
      ],
      "packageLocks": []
    },
    "lint": {
      "command": "eslint src/ --ext .ts,.tsx --color --cache --cache-location .eslintcache",
      "dependencies": [
        "type-check"
      ],
      "files": [
        "src/**/*.{ts,tsx}",
        ".eslintignore",
        ".eslintrc.cjs",
        "../../../package.json",
        "package.json",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.preact.nolib.json",
        "../../../config/eslintrc/**",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "test": {
      "command": "jest --config config/jest.config.json --passWithNoTests",
      "dependencies": [
        "type-check"
      ],
      "files": [
        "config/jest.config.json",
        "src/**"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    }
  }
}
