{
  "name": "@noshiro/slack-app-functions",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rimraf dist",
    "deploy": "firebase deploy --only functions",
    "fb": "firebase",
    "firebase": "firebase",
    "get": "node src/get.js",
    "lint": "eslint src/ --ext .ts",
    "lint:deps": "yarn lint --no-eslintrc --config ${npm_package_config_root_dir}/config/eslintrc/.eslintrc-no-extraneous-dependency.js",
    "lint:fix": "yarn lint --fix",
    "logs": "firebase functions:log",
    "seeconfig": "firebase functions:config:get",
    "preserve": "yarn build",
    "serve": "firebase emulators:start --only functions",
    "setapikey": "firebase functions:config:set slack.apikey=",
    "preshell": "yarn build",
    "shell": "firebase functions:shell",
    "start": "yarn shell",
    "tsc": "tsc --noEmit",
    "type-check": "tsc --noEmit"
  },
  "config": {
    "root_dir": "../../../.."
  },
  "dependencies": {
    "@noshiro/ts-utils": "*",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.20.1"
  },
  "devDependencies": {
    "@noshiro/ts-type-utils": "*"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
