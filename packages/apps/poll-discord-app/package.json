{
  "name": "@noshiro/discord-poll-app",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn z:wireit:build",
    "clean": "run-p clean:**",
    "clean:build": "rimraf dist",
    "clean:eslintcache": "rimraf .eslintcache",
    "clean:wireit": "rimraf .wireit",
    "fmt": "yarn z:cmd:prettier",
    "gi": "yarn z:wireit:gi",
    "heroku:bash": "heroku run bash --app poll-discord-app",
    "heroku:logs": "heroku logs --tail --app poll-discord-app",
    "lint": "yarn z:wireit:lint",
    "lint:fix": "yarn z:wireit:lint:fix",
    "setup": "run-p z:cmd:setup:**",
    "start:dev": "export NODE_ENV='development' && node ./dist/index.js",
    "start:prod": "node ./dist/index.js",
    "tsc": "yarn z:wireit:type-check",
    "tscw": "yarn z:cmd:type-check --watch",
    "z:cmd:eslint": "eslint src/ --ext .ts,.tsx --color --cache --cache-location .eslintcache",
    "z:cmd:gi": "bash ../../../scripts/index_ts_generator.sh ./src --min-depth 1 --ignore \"(assets)\"",
    "z:cmd:prettier": "prettier --ignore-path ../../../.prettierignore  --write .",
    "z:cmd:publish": "yarn publish --no-git-tag-version --access=public",
    "z:cmd:setup:dbjson": "echo '{ \"polls\": [] }' > ./db.json",
    "z:cmd:tsc-incremental": "tsc --incremental --pretty",
    "z:cmd:type-check": "tsc --noEmit",
    "z:no-wireit:build": "yarn z:cmd:tsc-incremental --project tsconfig.json",
    "z:no-wireit:gi": "yarn z:cmd:gi",
    "z:no-wireit:lint": "yarn z:cmd:eslint",
    "z:no-wireit:lint:fix": "yarn z:cmd:eslint --fix",
    "z:no-wireit:type-check": "yarn z:cmd:type-check",
    "z:wireit:build": "wireit",
    "z:wireit:gi": "wireit",
    "z:wireit:lint": "wireit",
    "z:wireit:lint:fix": "wireit",
    "z:wireit:type-check": "wireit"
  },
  "dependencies": {
    "@noshiro/ts-utils": "*",
    "@noshiro/ts-utils-additional": "*",
    "discord.js": "^13.7.0",
    "dotenv": "^16.0.1",
    "pg": "^8.7.3",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@noshiro/global-syncflow": "*",
    "@noshiro/global-ts-utils": "*",
    "@noshiro/ts-type-utils": "*",
    "@types/pg": "^8.6.5"
  },
  "engines": {
    "node": ">=16.6.x"
  },
  "wireit": {
    "z:wireit:build": {
      "command": "yarn z:no-wireit:build",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../config/tsconfig/**",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [
        "dist/**",
        ".tsbuildinfo"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "z:wireit:gi": {
      "command": "yarn z:no-wireit:gi",
      "clean": false,
      "files": [
        "../../../scripts/index_ts_generator.sh",
        "src/**"
      ],
      "output": [
        "src/*/**/index.ts"
      ],
      "packageLocks": []
    },
    "z:wireit:lint": {
      "command": "yarn z:no-wireit:lint",
      "dependencies": [
        "z:wireit:type-check"
      ],
      "files": [
        "src/**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs",
        "package.json",
        "tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../config/eslintrc/**",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "z:wireit:lint:fix": {
      "command": "yarn z:no-wireit:lint:fix",
      "dependencies": [
        "z:wireit:type-check"
      ],
      "files": [
        "src/**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs",
        "package.json",
        "tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../config/eslintrc/**",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "clean": false,
      "output": [
        "src/**/*.ts"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "z:wireit:type-check": {
      "command": "yarn z:no-wireit:type-check",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../config/tsconfig/**",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    }
  }
}
