{
  "name": "@noshiro/poll-discord-app",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": true,
  "type": "module",
  "scripts": {
    "build": "wireit",
    "clean": "run-p clean:**",
    "clean:build": "rimraf build",
    "clean:eslintcache": "rimraf .eslintcache",
    "clean:wireit": "rimraf .wireit/**",
    "fb:init": "firebase init",
    "fb:login": "firebase login",
    "fb:login:ci": "firebase login:ci",
    "fmt": "yarn zz:cmd:prettier .",
    "gcloud:scp": "wireit",
    "gi": "wireit",
    "lint": "wireit",
    "lint:fix": "wireit",
    "start": "node ./build/index.mjs",
    "tsc": "yarn type-check",
    "tscw": "tsc --noEmit --watch",
    "type-check": "wireit",
    "zz:cmd:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint",
    "zz:cmd:eslint:src": "yarn zz:cmd:eslint --config eslint.config.js './src/**/*' --cache --cache-location ./.eslintcache",
    "zz:cmd:prettier": "prettier --cache --cache-strategy content --ignore-path ../../../.prettierignore --write"
  },
  "dependencies": {
    "@noshiro/io-ts": "*",
    "@noshiro/ts-utils": "*",
    "@noshiro/ts-utils-additional": "*",
    "discord.js": "^14.12.1",
    "dotenv": "^16.0.3",
    "firebase": "^10.6.0"
  },
  "devDependencies": {
    "@noshiro/eslint-utils": "*",
    "@noshiro/global-ts-utils": "*",
    "@noshiro/mono-scripts": "*",
    "@noshiro/ts-type-utils": "*"
  },
  "engines": {
    "node": ">=16.6.x"
  },
  "wireit": {
    "type-check": {
      "command": "tsc --noEmit",
      "files": [
        "./**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**"
      ],
      "output": []
    },
    "gi": {
      "command": "bash ../../../scripts/bash/index_ts_generator.sh ./src --min-depth 1 --ext .mts --ignore assets",
      "files": [
        "../../../scripts/bash/index_ts_generator.sh",
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}"
      ],
      "clean": false,
      "output": [
        "src/*/**/index.mts"
      ],
      "packageLocks": []
    },
    "build": {
      "command": "node ./scripts/esbuild.mjs",
      "files": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./tsconfig.json",
        "./scripts/**",
        "../../../package.json",
        "../../../config/tsconfig/**"
      ],
      "clean": true,
      "output": [
        "./build/**"
      ]
    },
    "lint": {
      "command": "yarn zz:cmd:eslint:src",
      "files": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./eslint.config.js",
        "./package.json",
        "./tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**"
      ],
      "output": []
    },
    "lint:fix": {
      "command": "yarn zz:cmd:eslint:src --fix",
      "files": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./eslint.config.js",
        "./package.json",
        "./tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**"
      ],
      "clean": false,
      "output": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}"
      ]
    },
    "gcloud:scp": {
      "command": "gcloud compute scp ./build/**/*.mjs ./.env.prd e2-micro-1:/home/noshiro --zone=us-central1-a",
      "dependencies": [
        "type-check",
        "build"
      ]
    }
  }
}
