{
  "name": "@noshiro/poll-discord-app",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn z:build:wireit",
    "clean": "run-p clean:**",
    "clean:build": "rimraf dist",
    "clean:eslintcache": "rimraf .eslintcache",
    "clean:wireit": "rimraf .wireit/*/cache",
    "fmt": "yarn zz:cmd:prettier .",
    "gi": "yarn z:gi:wireit",
    "lint": "yarn z:lint:src:wireit",
    "lint:fix": "yarn z:lint:fix:src:wireit",
    "start:dev": "export NODE_ENV='development' && node ./dist/index.js",
    "start:prod": "node ./dist/index.js",
    "tsc": "yarn z:type-check:wireit",
    "tscw": "yarn z:type-check:impl --watch",
    "z:build:impl": "yarn zz:cmd:tsc-incremental --project tsconfig.json",
    "z:build:wireit": "wireit",
    "z:gi:impl": "yarn zz:cmd:gi ./src --min-depth 1 --ignore assets",
    "z:gi:wireit": "wireit",
    "z:lint:fix:src:impl": "yarn zz:cmd:eslint:src --fix",
    "z:lint:fix:src:wireit": "wireit",
    "z:lint:src:impl": "yarn zz:cmd:eslint:src",
    "z:lint:src:wireit": "wireit",
    "z:setup": "run-p z:setup:dbjson",
    "z:setup:dbjson": "echo '{ \"polls\": [] }' > ./db.json",
    "z:type-check:impl": "tsc --noEmit",
    "z:type-check:wireit": "wireit",
    "zz:cmd:eslint": "eslint --ext .ts,.tsx --color",
    "zz:cmd:eslint:src": "yarn zz:cmd:eslint src/ --cache --cache-location ./.eslintcache",
    "zz:cmd:gi": "bash ../../../scripts/index_ts_generator.sh",
    "zz:cmd:prettier": "prettier --cache --cache-strategy content --ignore-path ../../../.prettierignore --write",
    "zz:cmd:publish": "yarn publish --no-git-tag-version --access=public",
    "zz:cmd:tsc-incremental": "tsc --incremental --pretty"
  },
  "dependencies": {
    "@noshiro/ts-utils": "*",
    "@noshiro/ts-utils-additional": "*",
    "discord.js": "^12.5.1",
    "dotenv": "^16.0.3",
    "pg": "^8.9.0"
  },
  "devDependencies": {
    "@noshiro/ts-type-utils": "*",
    "@types/pg": "^8.6.6"
  },
  "engines": {
    "node": ">=16.6.x"
  },
  "wireit": {
    "z:build:wireit": {
      "command": "yarn z:build:impl",
      "clean": "if-file-deleted",
      "dependencies": [
        "z:setup"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../config/tsconfig/**",
        "../../utils/stdlib/stdlib.d.ts",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [
        "dist/**",
        ".tsbuildinfo"
      ]
    },
    "z:gi:wireit": {
      "command": "yarn z:gi:impl",
      "clean": false,
      "files": [
        "../../../scripts/index_ts_generator.sh",
        "src/**"
      ],
      "output": [
        "src/*/**/index.ts"
      ],
      "packageLocks": []
    },
    "z:lint:src:wireit": {
      "command": "yarn z:lint:src:impl",
      "files": [
        "src/**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs",
        "package.json",
        "tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../config/eslintrc/**",
        "../../utils/stdlib/stdlib.d.ts",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": []
    },
    "z:lint:fix:src:wireit": {
      "command": "yarn z:lint:fix:src:impl",
      "files": [
        "src/**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs",
        "package.json",
        "tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../config/eslintrc/**",
        "../../utils/stdlib/stdlib.d.ts",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "clean": false,
      "output": [
        "src/**/*.ts"
      ]
    },
    "z:type-check:wireit": {
      "command": "yarn z:type-check:impl",
      "dependencies": [
        "z:setup"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../config/tsconfig/**",
        "../../utils/stdlib/stdlib.d.ts",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": []
    }
  }
}
