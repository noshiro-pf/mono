{
  "name": "@noshiro/discord-poll-app",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "wireit",
    "clean": "rimraf dist",
    "fmt": "prettier --ignore-path ../../../.prettierignore  --write .",
    "gi": "wireit",
    "heroku:bash": "heroku run bash --app poll-discord-app",
    "heroku:logs": "heroku logs --tail --app poll-discord-app",
    "lint": "wireit",
    "lint:fix": "yarn lint --fix",
    "setup": "run-p setup:**",
    "setup:dbjson": "echo '{ \"polls\": [] }' > ./db.json",
    "start:dev": "export NODE_ENV='development' && node ./dist/index.js",
    "start:prod": "node ./dist/index.js",
    "tscw": "tsc --noEmit --watch",
    "type-check": "wireit"
  },
  "dependencies": {
    "@noshiro/ts-utils": "2.0.1",
    "@noshiro/ts-utils-additional": "*",
    "discord.js": "^13.7.0",
    "dotenv": "^16.0.1",
    "pg": "^8.7.3",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@noshiro/global-syncflow": "*",
    "@noshiro/global-ts-utils": "*",
    "@noshiro/ts-type-utils": "*",
    "@types/pg": "^8.6.5"
  },
  "engines": {
    "node": ">=16.6.x"
  },
  "wireit": {
    "type-check": {
      "command": "tsc --noEmit",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.base.nolib.json",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "build": {
      "command": "tsc",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.base.nolib.json",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [
        "dist/**"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "gi": {
      "command": "bash ../../../scripts/index_ts_generator.sh ./src --min-depth 1  --ignore \"(assets)\"",
      "clean": false,
      "files": [
        "../../../scripts/index_ts_generator.sh",
        "src/**"
      ],
      "packageLocks": []
    },
    "lint": {
      "command": "eslint src/ --ext .ts,.tsx --color --cache --cache-location .eslintcache",
      "files": [
        "src/**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs",
        "../../../package.json",
        "package.json",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.base.nolib.json",
        "../../../config/eslintrc/**",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": []
    }
  }
}
