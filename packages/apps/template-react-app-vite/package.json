{
  "name": "@noshiro/react-app-template-vite",
  "version": "0.0.0",
  "private": false,
  "license": "MIT",
  "scripts": {
    "build": "run-s build:bundle",
    "build:bundle": "wireit",
    "build:bundle:no-minify": "yarn z:vite:build --minify false",
    "clean": "run-p clean:*",
    "clean:build": "rimraf build",
    "clean:firebase": "rimraf .firebase",
    "clean:wireit": "rimraf .wireit",
    "cy:open": "cypress open",
    "cy:record": "cypress run --record --key ${CYPRESS_RECORD_KEY}",
    "cy:run:chrome": "cypress run --headed --browser chrome",
    "cy:run:firefox": "cypress run --headed --browser firefox",
    "fb:deploy": "wireit",
    "fb:deploy:hosting": "wireit",
    "fb:export": "wireit",
    "fb:init": "firebase init",
    "fb:login": "firebase login",
    "fb:login:ci": "firebase login:ci",
    "fmt": "prettier --ignore-path ../../../.prettierignore  --write .",
    "gi": "wireit",
    "lint": "run-p z:lint:*",
    "lint:fix": "run-p z:lint:fix:*",
    "preview": "yarn z:vite:preview",
    "serve": "firebase serve",
    "start:dev-server": "yarn z:vite --port 5180",
    "start:emulators": "yarn z:firebase:emulators:start",
    "test": "wireit",
    "testw": "yarn z:vitest watch",
    "tscw": "yarn type-check:watch",
    "type-check": "wireit",
    "type-check:watch": "yarn z:type-check --watch",
    "z:eslint": "eslint --ext .ts,.tsx",
    "z:eslint:cy": "yarn z:eslint cypress/ --cache --cache-location cypress/.eslintcache",
    "z:eslint:src": "yarn z:eslint src/ --cache --cache-location .eslintcache",
    "z:firebase:emulators:start": "firebase emulators:start --only functions,firestore  --import firebase-emulator-exports --export-on-exit",
    "z:lint:cy": "wireit",
    "z:lint:fix:cy": "yarn z:lint:cy --fix",
    "z:lint:fix:src": "yarn z:lint:src --fix",
    "z:lint:src": "wireit",
    "z:type-check": "tsc --noEmit",
    "z:vite": "vite --config config/vite.config.ts",
    "z:vite:build": "yarn type-check && yarn z:vite build",
    "z:vite:preview": "yarn z:vite preview",
    "z:vitest": "vitest --config config/vitest.config.ts --passWithNoTests"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@noshiro/io-ts": "*",
    "@noshiro/react-utils": "*",
    "@noshiro/resize-observer-react-hooks": "*",
    "@noshiro/syncflow": "*",
    "@noshiro/syncflow-react-hooks": "*",
    "@noshiro/tiny-router-observable": "*",
    "@noshiro/tiny-router-react-hooks": "*",
    "@noshiro/ts-utils": "*",
    "@noshiro/ts-utils-additional": "*",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.0"
  },
  "devDependencies": {
    "@noshiro/global-react": "*",
    "@noshiro/global-react-utils": "*",
    "@noshiro/global-styled-components": "*",
    "@noshiro/global-syncflow": "*",
    "@noshiro/global-syncflow-react-hooks": "*",
    "@noshiro/global-tiny-router-observable": "*",
    "@noshiro/global-tiny-router-react-hooks": "*",
    "@noshiro/global-ts-utils": "*",
    "@noshiro/ts-type-utils": "*"
  },
  "wireit": {
    "type-check": {
      "command": "yarn z:type-check",
      "files": [
        "src/**/*.{ts,tsx}",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.react.nolib.json",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "build:bundle": {
      "command": "yarn z:vite:build",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "config/vite.config.ts",
        "../../../config/tsconfig/tsconfig.react.nolib.json",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [
        "build/**"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "fb:deploy": {
      "command": "firebase deploy",
      "dependencies": [
        "build"
      ]
    },
    "fb:deploy:hosting": {
      "command": "firebase deploy --only hosting",
      "dependencies": [
        "build"
      ]
    },
    "fb:export": {
      "command": "node ./scripts/export-firestore > ./scripts/firestore_backup.json && prettier --write ./scripts/firestore_backup.json",
      "dependencies": []
    },
    "gi": {
      "command": "bash ../../../scripts/index_ts_generator.sh ./src --min-depth 1 --ignore assets",
      "clean": false,
      "files": [
        "../../../scripts/index_ts_generator.sh",
        "src/**"
      ],
      "packageLocks": []
    },
    "z:lint:src": {
      "command": "yarn z:eslint:src --color",
      "dependencies": [
        "type-check"
      ],
      "files": [
        "src/**/*.{ts,tsx}",
        ".eslintignore",
        ".eslintrc.cjs",
        "../../../package.json",
        "package.json",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.react.nolib.json",
        "../../../config/eslintrc/**",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "z:lint:cy": {
      "command": "yarn z:eslint:cy --color",
      "dependencies": [
        "type-check"
      ],
      "files": [
        "cypress/**/*.ts",
        ".eslintignore",
        "cypress/.eslintrc.cjs",
        "../../../package.json",
        "package.json",
        "cypress/tsconfig.json",
        "../../../config/tsconfig/tsconfig.base.nolib.json",
        "../../../config/eslintrc/**",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "test": {
      "command": "yarn z:vitest run",
      "dependencies": [
        "type-check"
      ],
      "files": [
        "config/global.ts",
        "config/tsconfig.test.json",
        "config/vitest.config.ts",
        "src/**"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    }
  }
}
