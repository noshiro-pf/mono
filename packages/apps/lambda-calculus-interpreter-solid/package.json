{
  "name": "@noshiro/lambda-interpreter-app-solid",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "scripts": {
    "build:dev": "wireit",
    "clean": "run-p clean:**",
    "clean:build": "rimraf build",
    "clean:eslintcache": "rimraf .eslintcache",
    "clean:firebase": "rimraf .firebase",
    "clean:wireit": "rimraf .wireit",
    "fmt": "prettier --ignore-path ../../../.prettierignore  --write .",
    "lint": "wireit",
    "lint:fix": "yarn z:lint --fix",
    "start": "solid-scripts start",
    "test:dev": "solid-scripts test",
    "tscw": "tsc --noEmit --watch",
    "type-check": "wireit",
    "z:lint": "eslint src/ --ext .ts,.tsx --color --cache --cache-location .eslintcache"
  },
  "browserslist": [
    "Chrome 74",
    "Firefox 63",
    "Safari 11",
    "Edge 17",
    "Node 10"
  ],
  "dependencies": {
    "@noshiro/lambda-calculus-interpreter-core": "*",
    "@noshiro/solid-styled-components": "*",
    "@noshiro/syncflow": "*",
    "@noshiro/ts-utils": "*",
    "solid-js": "^0.23.11"
  },
  "devDependencies": {
    "@noshiro/global-ts-utils": "*",
    "@noshiro/ts-type-utils": "*"
  },
  "wireit": {
    "type-check": {
      "command": "tsc --noEmit",
      "files": [
        "src/**/*.{ts,tsx}",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.base.nolib.json",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "build:dev": {
      "command": "solid-scripts build",
      "dependencies": [
        "../lambda-calculus-interpreter-core:build:esm"
      ],
      "files": [
        "src/**/*",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.base.nolib.json",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [
        "build/**"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "lint": {
      "command": "yarn z:lint",
      "dependencies": [
        "type-check"
      ],
      "files": [
        "src/**/*.{ts,tsx}",
        ".eslintignore",
        ".eslintrc.cjs",
        "../../../package.json",
        "package.json",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.base.nolib.json",
        "../../../config/eslintrc/**",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    }
  }
}
