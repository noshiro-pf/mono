{
  "name": "@noshiro/event-schedule-app",
  "version": "5.0.1",
  "private": false,
  "license": "MIT",
  "scripts": {
    "build": "run-s build:bundle build:copy-public",
    "build:bundle": "wireit",
    "build:copy-public": "wireit",
    "clean": "rimraf build .firebase",
    "cy:open": "cypress open",
    "cy:record": "cypress run --record --key ${CYPRESS_RECORD_KEY}",
    "cy:run:chrome": "cypress run --headed --browser chrome",
    "cy:run:firefox": "cypress run --headed --browser firefox",
    "fb:deploy": "wireit",
    "fb:deploy:functions": "wireit",
    "fb:deploy:hosting": "wireit",
    "fb:emulators:gen-dummy-runtimeconfig": "echo '{ \"gmail\": { \"email\": \"dummy@gmail.com\", \"password\": \"dummy\" } }' > functions/.runtimeconfig.json",
    "fb:emulators:gen-runtimeconfig": "firebase functions:config:get > functions/.runtimeconfig.json",
    "fb:emulators:start": "firebase emulators:start --only functions,firestore  --import firebase-emulator-exports --export-on-exit",
    "fb:export": "wireit",
    "fb:init": "firebase init",
    "fb:login": "firebase login",
    "fb:login:ci": "firebase login:ci",
    "fb:write": "node ./scripts/write_firestore",
    "fmt": "prettier --ignore-path ../../../.prettierignore  --write .",
    "gi": "wireit",
    "lint": "wireit",
    "lint:fix": "yarn lint --fix",
    "serve": "http-server ./build",
    "setup": "run-p setup:**",
    "setup:scripts": "wireit",
    "setup:service-account-key": "wireit",
    "start:build-functions": "cd functions && yarn watch",
    "start:dev-server": "webpack serve --config config/webpack.dev.js",
    "start:emulators": "yarn fb:emulators:start",
    "test": "wireit",
    "tscw": "tsc --noEmit --watch",
    "type-check": "wireit"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@blueprintjs/core": "^4.1.2",
    "@blueprintjs/datetime": "^4.1.2",
    "@blueprintjs/icons": "^4.2.3",
    "@blueprintjs/popover2": "^1.1.4",
    "@noshiro/deep-object-diff": "*",
    "@noshiro/event-schedule-app-shared": "*",
    "@noshiro/fast-deep-equal": "*",
    "@noshiro/react-utils": "*",
    "@noshiro/syncflow": "*",
    "@noshiro/syncflow-react-hooks": "*",
    "@noshiro/tiny-router-observable": "*",
    "@noshiro/tiny-router-react-hooks": "*",
    "@noshiro/ts-utils": "*",
    "@noshiro/ts-utils-additional": "*",
    "firebase": "^9.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.0",
    "url-regex": "^5.0.0"
  },
  "devDependencies": {
    "@noshiro/global-react": "*",
    "@noshiro/global-react-utils": "*",
    "@noshiro/global-styled-components": "*",
    "@noshiro/global-syncflow": "*",
    "@noshiro/global-syncflow-react-hooks": "*",
    "@noshiro/global-ts-utils": "*",
    "@noshiro/ts-type-utils": "*"
  },
  "wireit": {
    "setup:service-account-key": {
      "command": "touch ./scripts/service-account-key.json"
    },
    "setup:scripts": {
      "command": "tsc --project config/tsconfig.scripts.json",
      "dependencies": [
        "setup:service-account-key"
      ]
    },
    "type-check": {
      "command": "tsc --noEmit",
      "files": [
        "src/**/*.{ts,tsx}",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.react.nolib.json",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "build:bundle": {
      "command": "webpack --config config/webpack.prod.js",
      "dependencies": [
        "../event-schedule-app-shared:build"
      ],
      "files": [
        "src/**/*",
        "tsconfig.json",
        "config/webpack.prod.js",
        "config/env.js",
        "config/paths.js",
        "../../../config/webpackconfig/react",
        "../../../config/tsconfig/tsconfig.react.nolib.json",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [
        "build/**"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "build:copy-public": {
      "command": "cpx \"public/**\" build"
    },
    "fb:deploy": {
      "command": "firebase deploy",
      "dependencies": [
        "build",
        "./functions:build"
      ]
    },
    "fb:deploy:functions": {
      "command": "firebase deploy --only functions",
      "dependencies": [
        "./functions:build"
      ]
    },
    "fb:deploy:hosting": {
      "command": "firebase deploy --only hosting",
      "dependencies": [
        "build"
      ]
    },
    "fb:export": {
      "command": "node ./scripts/export-firestore > ./scripts/firestore_backup.json && prettier --write ./scripts/firestore_backup.json",
      "dependencies": [
        "setup:scripts"
      ]
    },
    "gi": {
      "command": "bash ../../../scripts/index_ts_generator.sh ./src --min-depth 1  --ignore \"(assets|global)\"",
      "clean": false,
      "files": [
        "../../../scripts/index_ts_generator.sh",
        "src/**"
      ],
      "packageLocks": []
    },
    "lint": {
      "command": "eslint src/ --ext .ts,.tsx --color --cache --cache-location .eslintcache",
      "dependencies": [
        "type-check"
      ],
      "files": [
        "src/**/*.{ts,tsx}",
        ".eslintignore",
        ".eslintrc.cjs",
        "../../../package.json",
        "package.json",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.react.nolib.json",
        "../../../config/eslintrc/**",
        "../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "test": {
      "command": "jest --config config/jest.config.json --passWithNoTests",
      "dependencies": [
        "type-check"
      ],
      "files": [
        "config/jest.config.json",
        "src/**"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    }
  }
}
