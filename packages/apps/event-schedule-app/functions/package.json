{
  "name": "@noshiro/event-schedule-app-functions",
  "version": "5.1.0",
  "private": false,
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": true,
  "type": "module",
  "main": "build/index.mjs",
  "scripts": {
    "build": "wireit",
    "clean": "run-p clean:**",
    "clean:build": "rimraf build",
    "clean:eslintcache": "rimraf .eslintcache",
    "clean:firebase": "rimraf .firebase",
    "clean:wireit": "rimraf .wireit/**",
    "fb:config:get": "firebase functions:config:get",
    "fb:config:set": "firebase functions:config:set",
    "fb:config:setapikey": "firebase functions:config:set slack.apikey=",
    "fb:deploy": "wireit",
    "fb:emulators:gen-runtimeconfig": "firebase functions:config:get > .runtimeconfig.json",
    "fb:logs": "firebase functions:log",
    "fb:shell": "firebase functions:shell",
    "fb:showlog": "firebase functions:log",
    "fmt": "yarn zz:cmd:prettier .",
    "gi": "wireit",
    "lint": "wireit",
    "lint:fix": "wireit",
    "start:emulators": "firebase emulators:start --only functions",
    "start:shell": "yarn shell",
    "tsc": "yarn type-check",
    "tscw": "tsc --noEmit --watch",
    "type-check": "wireit",
    "watch": "tsc --watch --incremental --pretty --project tsconfig.json",
    "z:setup": "run-p z:setup:fb:emulators:gen-runtimeconfig",
    "z:setup:fb:emulators:gen-dummy-runtimeconfig": "echo '{ \"gmail\": { \"email\": \"dummy@gmail.com\", \"password\": \"dummy\", \"app-password\": \"dummy\", \"email-address-for-error-log\": \"dummy@gmail.com\" } }' > .runtimeconfig.json",
    "z:setup:fb:emulators:gen-runtimeconfig": "firebase functions:config:get > .runtimeconfig.json",
    "zz:cmd:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint",
    "zz:cmd:eslint:src": "yarn zz:cmd:eslint --config ./eslint.config.js './src/**/*' --cache --cache-location ./.eslintcache",
    "zz:cmd:prettier": "prettier --cache --cache-strategy content --ignore-path ../../../../.prettierignore --write"
  },
  "dependencies": {
    "@noshiro/event-schedule-app-shared": "*",
    "@noshiro/fast-deep-equal": "*",
    "@noshiro/io-ts": "*",
    "@noshiro/ts-utils": "*",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "nodemailer": "^6.9.9"
  },
  "engines": {
    "node": "20"
  },
  "wireit": {
    "type-check": {
      "command": "tsc --noEmit",
      "dependencies": [
        "../../event-schedule-app-shared:build"
      ],
      "files": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "../../../../package.json",
        "../../../../config/tsconfig/**",
        "../../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "output": []
    },
    "gi": {
      "command": "bash ../../../../scripts/bash/index_ts_generator.sh ./src --min-depth 1 --ext .mts",
      "files": [
        "../../../../scripts/bash/index_ts_generator.sh",
        "src/**"
      ],
      "clean": false,
      "output": [
        "src/*/**/index.ts"
      ],
      "packageLocks": []
    },
    "build": {
      "dependencies": [
        "../../event-schedule-app-shared:build"
      ],
      "command": "tsc --project tsconfig.json",
      "files": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "../../../../package.json",
        "../../../../config/tsconfig/**",
        "../../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "clean": true,
      "output": [
        "build/**",
        ".tsbuildinfo"
      ]
    },
    "lint": {
      "command": "yarn zz:cmd:eslint:src",
      "files": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./eslint.config.js",
        "./package.json",
        "./tsconfig.json",
        "../../../../package.json",
        "../../../../config/tsconfig/**",
        "../../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "output": []
    },
    "lint:fix": {
      "command": "yarn zz:cmd:eslint:src --fix",
      "files": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./eslint.config.js",
        "./package.json",
        "./tsconfig.json",
        "../../../../package.json",
        "../../../../config/tsconfig/**",
        "../../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "clean": false,
      "output": [
        "src/**/*.ts"
      ]
    },
    "fb:deploy": {
      "dependencies": [
        "build"
      ],
      "command": "firebase deploy --only functions"
    }
  }
}
