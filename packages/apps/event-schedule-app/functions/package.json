{
  "name": "@noshiro/event-schedule-app-functions",
  "version": "5.1.0",
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "wireit",
    "clean": "rimraf dist",
    "config:get": "firebase functions:config:get",
    "config:set": "firebase functions:config:set",
    "deploy": "firebase deploy --only functions",
    "fmt": "prettier --ignore-path ../../../../.prettierignore  --write .",
    "gi": "wireit",
    "lint": "wireit",
    "lint:deps": "wireit",
    "lint:fix": "yarn lint --fix",
    "logs": "firebase functions:log",
    "preserve": "yarn build",
    "serve": "firebase emulators:start --only functions",
    "setup": "yarn build",
    "preshell": "yarn build",
    "shell": "firebase functions:shell",
    "showlog": "firebase functions:log",
    "start": "yarn shell",
    "tscw": "tsc --noEmit --watch",
    "type-check": "wireit",
    "watch": "yarn build watch"
  },
  "dependencies": {
    "@noshiro/event-schedule-app-shared": "6.2.0",
    "@noshiro/fast-deep-equal": "1.0.1",
    "@noshiro/ts-utils": "2.0.1",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.20.1",
    "nodemailer": "^6.4.16"
  },
  "devDependencies": {
    "@noshiro/ts-type-utils": "*"
  },
  "engines": {
    "node": "16"
  },
  "wireit": {
    "type-check": {
      "command": "tsc --noEmit",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../../config/tsconfig/tsconfig.base.nolib.json",
        "../../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "build": {
      "command": "tsc --incremental --pretty --project tsconfig.json",
      "clean": "if-file-deleted",
      "dependencies": [
        "../../event-schedule-app-shared:build:cjs"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../../config/tsconfig/tsconfig.base.nolib.json",
        "../../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [
        "cjs/**",
        ".tsbuildinfo"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "gi": {
      "command": "bash ../../../../scripts/index_ts_generator.sh ./src --min-depth 1",
      "clean": false,
      "files": [
        "../../../../scripts/index_ts_generator.sh",
        "src/**"
      ],
      "packageLocks": []
    },
    "lint": {
      "command": "eslint src/ --ext .ts --color --cache --cache-location .eslintcache ",
      "dependencies": [
        "fmt",
        "type-check"
      ],
      "files": [
        "src/**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs",
        "tsconfig.json",
        "../../../../config/tsconfig/tsconfig.base.nolib.json",
        "../../../../config/eslintrc/**",
        "../../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "lint:deps": {
      "command": "eslint src/ --ext .ts --color --cache --cache-location .eslintcache-deps --no-eslintrc --config ../../../../config/eslintrc/.eslintrc-no-extraneous-dependency.js",
      "dependencies": [
        "fmt"
      ],
      "files": [
        "src/**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs",
        "../../../../package.json",
        "package.json",
        "tsconfig.json",
        "../../../../config/tsconfig/tsconfig.base.nolib.json",
        "../../../../config/eslintrc/**",
        "../../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    }
  }
}
