{
  "name": "@noshiro/slack-app",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": true,
  "type": "module",
  "browser": "src/main.tsx",
  "scripts": {
    "build": "wireit",
    "build:no-minify": "yarn build --minify false",
    "clean": "run-p clean:**",
    "clean:build": "rimraf build",
    "clean:eslintcache": "rimraf .eslintcache",
    "clean:firebase": "rimraf .firebase",
    "clean:wireit": "rimraf .wireit/**",
    "cy:open": "yarn workspace @noshiro/slack-app-cypress cy:open",
    "cy:record": "yarn workspace @noshiro/slack-app-cypress cy:record",
    "cy:run:chrome": "yarn workspace @noshiro/slack-app-cypress cy:run:chrome",
    "cy:run:firefox": "yarn workspace @noshiro/slack-app-cypress cy:run:firefox",
    "fb": "firebase",
    "fb:deploy": "wireit",
    "fb:deploy:functions": "wireit",
    "fb:deploy:hosting": "wireit",
    "fb:init": "firebase init",
    "fb:login": "firebase login",
    "fb:login:ci": "firebase login:ci",
    "fmt": "yarn zz:prettier .",
    "gi": "bash ../../../scripts/bash/index_ts_generator.sh ./src --min-depth 1 --ignore assets",
    "lint": "run-p lint:src lint:cy",
    "lint:cy": "yarn zz:eslint:cy",
    "lint:fix": "run-p lint:fix:src lint:fix:cy",
    "lint:fix:cy": "yarn zz:eslint:cy --fix",
    "lint:fix:src": "yarn zz:eslint:src --fix",
    "lint:src": "yarn zz:eslint:src",
    "preview": "yarn zz:vite:preview",
    "serve": "firebase serve",
    "start": "run-p start:**",
    "start:build-functions": "cd functions && yarn watch",
    "start:dev-server": "yarn zz:vite --port 5180",
    "start:emulators": "wireit",
    "test": "yarn zz:vitest run",
    "testw": "yarn zz:vitest watch",
    "tsc": "yarn type-check",
    "tscw": "tsc --noEmit --watch",
    "type-check": "run-p type-check:src type-check:cy",
    "type-check:cy": "tsc --noEmit -p ./cypress/tsconfig.json",
    "type-check:src": "wireit",
    "z:setup": "run-p z:setup:gen-global-dts",
    "z:setup:gen-global-dts": "node ./scripts/gen-global-dts.mjs",
    "zz:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint",
    "zz:eslint:cy": "yarn zz:eslint --config ./cypress/eslint.config.js './cypress/**/*.ts' --cache --cache-location ./cypress/.eslintcache",
    "zz:eslint:print-config": "yarn zz:eslint --print-config src/main.tsx",
    "zz:eslint:src": "yarn zz:eslint --config eslint.config.js './src/**/*' --cache --cache-location ./src/.eslintcache",
    "zz:prettier": "prettier --cache --cache-strategy content --ignore-path ../../../.prettierignore --write",
    "zz:vite": "vite --config configs/vite.config.ts",
    "zz:vite:preview": "yarn zz:vite preview",
    "zz:vitest": "vitest --config ./configs/vite.config.ts"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@noshiro/goober": "*",
    "@noshiro/io-ts": "*",
    "@noshiro/preact-utils": "*",
    "@noshiro/resize-observer-preact-hooks": "*",
    "@noshiro/syncflow": "*",
    "@noshiro/syncflow-preact-hooks": "*",
    "@noshiro/tiny-router-observable": "*",
    "@noshiro/tiny-router-preact-hooks": "*",
    "@noshiro/ts-utils": "*",
    "@noshiro/ts-utils-additional": "*",
    "preact": "^10.23.1"
  },
  "devDependencies": {
    "@noshiro/eslint-configs": "*",
    "@noshiro/global-goober": "*",
    "@noshiro/global-preact": "*",
    "@noshiro/global-preact-utils": "*",
    "@noshiro/global-syncflow": "*",
    "@noshiro/global-syncflow-preact-hooks": "*",
    "@noshiro/global-tiny-router-observable": "*",
    "@noshiro/global-tiny-router-preact-hooks": "*",
    "@noshiro/global-ts-utils": "*",
    "@noshiro/mono-scripts": "*",
    "@noshiro/ts-type-utils": "*",
    "@noshiro/ts-utils": "*"
  },
  "wireit": {
    "type-check:src": {
      "dependencies": [
        "z:setup:gen-global-dts"
      ],
      "command": "tsc --noEmit"
    },
    "build": {
      "dependencies": [
        "clean:build",
        "type-check"
      ],
      "command": "yarn zz:vite build"
    },
    "fb:deploy": {
      "dependencies": [
        "build"
      ],
      "command": "firebase deploy"
    },
    "fb:deploy:hosting": {
      "dependencies": [
        "build"
      ],
      "command": "firebase deploy --only hosting"
    },
    "fb:deploy:functions": {
      "dependencies": [
        "./functions:build"
      ],
      "command": "firebase deploy --only functions"
    },
    "start:emulators": {
      "dependencies": [
        "./functions:build"
      ],
      "service": true,
      "command": "firebase emulators:start --only functions,firestore,pubsub --import firebase-emulator-exports --export-on-exit"
    }
  }
}
