{
  "name": "@noshiro/slack-app-functions",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "author": "noshiro",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn z:build:wireit",
    "clean": "run-p clean:**",
    "clean:build": "rimraf dist",
    "clean:eslintcache": "rimraf .eslintcache",
    "clean:firebase": "rimraf .firebase",
    "clean:wireit": "rimraf .wireit/*/cache",
    "fb:config:get": "firebase functions:config:get",
    "fb:config:set": "firebase functions:config:set",
    "fb:config:setapikey": "firebase functions:config:set slack.apikey=",
    "fb:deploy": "firebase deploy --only functions",
    "fb:logs": "firebase functions:log",
    "fb:shell": "firebase functions:shell",
    "fb:showlog": "firebase functions:log",
    "fmt": "yarn zz:cmd:prettier .",
    "gi": "yarn z:gi:wireit",
    "lint": "yarn z:lint:src:wireit",
    "lint:fix": "yarn z:lint:fix:src:wireit",
    "start:emulators": "firebase emulators:start --only functions",
    "start:shell": "yarn shell",
    "tsc": "yarn z:type-check:wireit",
    "tscw": "yarn z:type-check:impl --watch",
    "watch": "tsc --watch --incremental --pretty --project tsconfig.json",
    "z:build:impl": "tsc --incremental --pretty --project tsconfig.json",
    "z:build:wireit": "wireit",
    "z:fb:deploy:impl": "firebase deploy",
    "z:fb:deploy:wireit": "wireit",
    "z:gi:impl": "yarn zz:cmd:gi ./src --min-depth 1",
    "z:gi:wireit": "wireit",
    "z:lint:fix:src:impl": "yarn zz:cmd:eslint:src --fix",
    "z:lint:fix:src:wireit": "wireit",
    "z:lint:src:impl": "yarn zz:cmd:eslint:src",
    "z:lint:src:wireit": "wireit",
    "z:test:impl": "yarn zz:cmd:vitest run",
    "z:type-check:impl": "tsc --noEmit",
    "z:type-check:wireit": "wireit",
    "zz:cmd:eslint": "eslint --ext .ts,.tsx --color",
    "zz:cmd:eslint:src": "yarn zz:cmd:eslint src/ --cache --cache-location ./.eslintcache",
    "zz:cmd:gi": "bash ../../../../scripts/index_ts_generator.sh",
    "zz:cmd:prettier": "prettier --cache --cache-strategy content --ignore-path ../../../../.prettierignore --write"
  },
  "dependencies": {
    "@noshiro/io-ts": "*",
    "@noshiro/ts-utils": "*",
    "firebase-admin": "^11.10.1",
    "firebase-functions": "^3.21.0"
  },
  "devDependencies": {
    "@noshiro/ts-type-utils": "*"
  },
  "engines": {
    "node": ">=16"
  },
  "wireit": {
    "z:build:wireit": {
      "command": "yarn z:build:impl",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../../config/tsconfig/**",
        "../../../utils/stdlib/stdlib.d.ts",
        "../../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [
        "cjs/**",
        ".tsbuildinfo"
      ]
    },
    "z:fb:deploy:wireit": {
      "command": "yarn z:fb:deploy:impl",
      "dependencies": [
        "z:build:wireit"
      ]
    },
    "z:gi:wireit": {
      "command": "yarn z:gi:impl",
      "clean": false,
      "files": [
        "../../../../scripts/index_ts_generator.sh",
        "src/**"
      ],
      "output": [
        "src/*/**/index.ts"
      ],
      "packageLocks": []
    },
    "z:lint:src:wireit": {
      "command": "yarn z:lint:src:impl",
      "files": [
        "src/**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs",
        "package.json",
        "tsconfig.json",
        "../../../../package.json",
        "../../../../config/tsconfig/**",
        "../../../../config/eslintrc/**",
        "../../../utils/stdlib/stdlib.d.ts",
        "../../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": []
    },
    "z:lint:fix:src:wireit": {
      "command": "yarn z:lint:fix:src:impl",
      "files": [
        "src/**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs",
        "package.json",
        "tsconfig.json",
        "../../../../package.json",
        "../../../../config/tsconfig/**",
        "../../../../config/eslintrc/**",
        "../../../utils/stdlib/stdlib.d.ts",
        "../../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "clean": false,
      "output": [
        "src/**/*.ts"
      ]
    },
    "z:type-check:wireit": {
      "command": "yarn z:type-check:impl",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../../config/tsconfig/**",
        "../../../utils/stdlib/stdlib.d.ts",
        "../../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": []
    }
  }
}
