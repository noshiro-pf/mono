{
  "name": "@noshiro/slack-app-functions",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "wireit",
    "clean": "run-p clean:**",
    "clean:build": "rimraf dist",
    "clean:eslintcache": "rimraf .eslintcache",
    "clean:firebase": "rimraf .firebase",
    "clean:wireit": "rimraf .wireit",
    "config:get": "firebase functions:config:get",
    "config:set": "firebase functions:config:set",
    "config:setapikey": "firebase functions:config:set slack.apikey=",
    "deploy": "firebase deploy --only functions",
    "fmt": "prettier --ignore-path ../../../../.prettierignore  --write .",
    "get": "node src/get.js",
    "gi": "wireit",
    "lint": "wireit",
    "lint:fix": "yarn z:lint --fix",
    "logs": "firebase functions:log",
    "preserve": "yarn build",
    "serve": "firebase emulators:start --only functions",
    "setup": "yarn build",
    "preshell": "yarn build",
    "shell": "firebase functions:shell",
    "showlog": "firebase functions:log",
    "start": "yarn shell",
    "tscw": "tsc --noEmit --watch",
    "type-check": "wireit",
    "z:lint": "eslint src/ --ext .ts,.tsx --color --cache --cache-location .eslintcache"
  },
  "dependencies": {
    "@noshiro/ts-utils": "*",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.20.1"
  },
  "devDependencies": {
    "@noshiro/ts-type-utils": "*"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "wireit": {
    "type-check": {
      "command": "tsc --noEmit",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../../config/tsconfig/tsconfig.base.nolib.json",
        "../../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "build": {
      "command": "tsc --incremental --pretty --project tsconfig.json",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../../config/tsconfig/tsconfig.base.nolib.json",
        "../../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [
        "cjs/**",
        ".tsbuildinfo"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "gi": {
      "command": "bash ../../../../scripts/index_ts_generator.sh ./src --min-depth 1",
      "clean": false,
      "files": [
        "../../../../scripts/index_ts_generator.sh",
        "src/**"
      ],
      "packageLocks": []
    },
    "lint": {
      "command": "yarn z:lint",
      "dependencies": [
        "type-check"
      ],
      "files": [
        "src/**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs",
        "../../../../package.json",
        "package.json",
        "tsconfig.json",
        "../../../../config/tsconfig/tsconfig.base.nolib.json",
        "../../../../config/eslintrc/**",
        "../../../utils/ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    }
  }
}
