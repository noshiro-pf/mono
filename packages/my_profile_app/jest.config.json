{
  "moduleFileExtensions": ["ts", "js", "tsx", "jsx"],
  "roots": ["<rootDir>/src"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.test.json"
    }
  },
  "automock": false,
  "setupFiles": ["./config/setupJest.js"],
  "testMatch": ["<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"]
}
