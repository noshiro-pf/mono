{
  "moduleNameMapper": {
    "^@mono/(.*)$": "<rootDir>/../$1/src"
  },
  "moduleFileExtensions": ["ts", "js", "tsx", "jsx"],
  "rootDir": "../",
  "roots": ["<rootDir>/src"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsConfig": "<rootDir>/config/tsconfig.test.json"
    }
  },
  "testMatch": ["<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"]
}
