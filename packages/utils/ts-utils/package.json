{
  "name": "@mono/ts-utils",
  "version": "1.0.0",
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": false,
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "_script_genindex": "bash ${npm_package_config_scripts_dir}/index_ts_generator.sh",
    "prebuild": "yarn clean:build",
    "build": "tsc --project ${npm_package_config_ts_config_for_build}",
    "clean": "npm-run-all clean:*",
    "clean:build": "rimraf \"${npm_package_config_lib_dir}\"",
    "clean:config": "rimraf config/**/*.js scripts/**/*.js",
    "fmt": "prettier --write . --ignore-path ${npm_package_config_prettierignore_path}",
    "genpipetypedef": "node \"${npm_package_config_gen_pipe_typedef}\" ${npm_package_config_pipe_max_length} \"${npm_package_config_pipe_ts_path}\"",
    "postgenpipetypedef": "yarn _script_formatglob \"${npm_package_config_pipe_ts_path}\"",
    "gi": "yarn _script_genindex ./src",
    "lint": "eslint src/ --ext .ts",
    "setup": "npm-run-all setup:*",
    "setup:genpipetypedef_script": "tsc --project \"${npm_package_config_gen_pipe_type_ts_config}\"",
    "test": "jest --config \"${npm_package_config_jest_config}\" --passWithNoTests",
    "testw": "yarn test --watch"
  },
  "config": {
    "gen_pipe_type_ts_config": "scripts/tsconfig.json",
    "gen_pipe_typedef": "scripts/gen_pipe_type_def",
    "jest_config": "config/jest.config.json",
    "lib_dir": "lib",
    "pipe_max_length": 12,
    "pipe_ts_path": "src/functional/pipe.ts",
    "prettierignore_path": "../../../.prettierignore",
    "scripts_dir": "../../../scripts",
    "ts_config_for_build": "config/tsconfig.lib.json"
  }
}
