{
  "moduleNameMapper": {
    "^@noshiro/(.*)$": "<rootDir>/../$1/src"
  },
  "rootDir": "../",
  "roots": ["<rootDir>/src"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsconfig": "<rootDir>/config/tsconfig.test.json"
    }
  },
  "testMatch": ["<rootDir>/src/**/*.test.ts"]
}
