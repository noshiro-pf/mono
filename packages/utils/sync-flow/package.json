{
  "name": "@mono/sync-flow",
  "version": "1.0.0",
  "description": "Reactive Programming Library for TypeScript/JavaScript",
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": false,
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "_script_genindex": "bash ${npm_package_config_scripts_dir}/index_ts_generator.sh",
    "prebuild": "yarn clean:build",
    "build": "tsc --project \"${npm_package_config_tsconfig_dev}\"",
    "clean": "npm-run-all clean:*",
    "clean:build": "rimraf \"${npm_package_config_lib_dir}\"",
    "clean:config": "rimraf config/**/*.js scripts/**/*.js",
    "clean:preview_script": "rimraf \"${npm_package_config_dist_dir}\"",
    "fmt": "prettier --write . --ignore-path ${npm_package_config_prettierignore_path}",
    "genpipabletypedef": "node \"${npm_package_config_gen_pipable_def}\" ${npm_package_config_pipable_max_length} \"${npm_package_config_pipable_ts_path}\"",
    "postgenpipabletypedef": "yarn _script_formatglob \"${npm_package_config_pipable_ts_path}\"",
    "gi": "yarn _script_genindex ./src",
    "lint": "eslint src/ --ext .ts",
    "setup": "npm-run-all setup:*",
    "setup:genpipabletypedef_script": "tsc --project \"${npm_package_config_gen_pipable_ts_config}\"",
    "presetup:preview": "yarn clean:preview_script",
    "setup:preview": "tsc --project \"${npm_package_config_tsconfig_dev}\"",
    "start": "node \"${npm_package_config_start_script}\"",
    "test": "jest --config \"${npm_package_config_jest_config}\" --passWithNoTests",
    "testw": "yarn test --watch"
  },
  "config": {
    "dist_dir": "dist",
    "gen_pipable_def": "scripts/gen_pipable_type_def",
    "gen_pipable_ts_config": "scripts/tsconfig.json",
    "jest_config": "config/jest.config.json",
    "lib_dir": "lib",
    "pipable_max_length": 12,
    "pipable_ts_path": "src/abstract_class/pipable.ts",
    "prettierignore_path": "../../../.prettierignore",
    "scripts_dir": "../../../scripts",
    "start_script": "dist/test/preview-main.js",
    "tsconfig_dev": "config/tsconfig.dev.json",
    "tsconfig_lib": "config/tsconfig.lib.json"
  },
  "dependencies": {
    "@mono/react-utils": "*"
  }
}
