{
  "name": "@noshiro/ts-type-utils",
  "version": "1.1.0",
  "private": false,
  "license": "MIT",
  "sideEffects": false,
  "types": "ts-type-utils.d.ts",
  "scripts": {
    "build": "yarn zz:cmd:build:seq",
    "clean": "rimraf ./types ./ts-type-utils.d.ts",
    "fmt": "yarn zz:cmd:prettier .",
    "lint": "yarn z:lint:src:wireit",
    "lint:fix": "yarn z:lint:fix:src:wireit",
    "pub": "yarn zz:cmd:publish",
    "test": "yarn z:type-check:wireit",
    "tsc": "yarn z:type-check:wireit",
    "tscw": "yarn z:type-check:impl --watch",
    "z:lint:fix:impl": "yarn zz:cmd:eslint --fix",
    "z:lint:fix:src:impl": "yarn zz:cmd:eslint:src-and-test --fix",
    "z:lint:fix:src:wireit": "wireit",
    "z:lint:impl": "yarn zz:cmd:eslint",
    "z:lint:src:impl": "yarn zz:cmd:eslint:src-and-test",
    "z:lint:src:wireit": "wireit",
    "z:type-check:impl": "tsc -p tsconfig.type-check.json",
    "z:type-check:wireit": "wireit",
    "zz:cmd:build:seq": "run-s zz:cmd:build:step1:wireit zz:cmd:build:step2 zz:cmd:build:step3 zz:cmd:build:step4 zz:cmd:build:step5",
    "zz:cmd:build:step1:impl": "tsc --pretty --project tsconfig.build.json",
    "zz:cmd:build:step1:wireit": "wireit",
    "zz:cmd:build:step2": "sed -i.bak ./types/*.d.ts -e 's/^import.*$//g' -e 's/export //g'",
    "zz:cmd:build:step3": "rimraf ./types/*.bak",
    "zz:cmd:build:step4": "rimraf ./types/index.d.ts",
    "zz:cmd:build:step5": "ls types/*.d.ts | sed -E 's@(^.*$)@/// <reference path=\"./\\1\" />@g' > ts-type-utils.d.ts",
    "zz:cmd:eslint": "eslint --ext .ts,.tsx --color",
    "zz:cmd:eslint:src-and-test": "yarn zz:cmd:eslint \"./{src,test}/**/*\" --cache --cache-location ./.eslintcache",
    "zz:cmd:prettier": "prettier --cache --ignore-path ../../../.prettierignore --write",
    "zz:cmd:publish": "yarn publish --no-git-tag-version --access=public"
  },
  "wireit": {
    "zz:cmd:build:step1:wireit": {
      "command": "yarn zz:cmd:build:step1:impl",
      "files": [
        "src/**/*.ts",
        "tsconfig.build.json",
        "../../../config/tsconfig/**"
      ],
      "output": [
        "types/**/*.d.ts",
        ".tsbuildinfo"
      ]
    },
    "z:lint:src:wireit": {
      "command": "yarn z:lint:src:impl",
      "dependencies": [
        "z:type-check:wireit"
      ],
      "files": [
        "src/**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs",
        "package.json",
        "tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../config/eslintrc/**",
        "../ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": []
    },
    "z:lint:fix:src:wireit": {
      "command": "yarn z:lint:fix:src:impl",
      "dependencies": [
        "z:type-check:wireit"
      ],
      "files": [
        "src/**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs",
        "package.json",
        "tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../config/eslintrc/**",
        "../ts-type-utils/ts-type-utils.d.ts"
      ],
      "clean": false,
      "output": [
        "src/**/*.ts"
      ]
    },
    "z:type-check:wireit": {
      "command": "yarn z:type-check:impl",
      "files": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "tsconfig.type-check.json",
        "../../../config/tsconfig/**",
        "../ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": []
    }
  }
}
