{
  "name": "@noshiro/global-ts-utils",
  "version": "1.0.0",
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": true,
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "scripts": {
    "build": "run-p build:**",
    "build:cjs": "wireit",
    "build:esm": "wireit",
    "clean": "rimraf cjs esm",
    "fmt": "prettier --ignore-path ../../../.prettierignore  --write .",
    "fmt:src": "prettier --ignore-path ../../../.prettierignore  --write ./src",
    "gi": "wireit",
    "lint": "wireit",
    "lint:deps": "wireit",
    "lint:fix": "yarn lint --fix",
    "pub": "yarn publish --no-git-tag-version --access=public",
    "setup": "run-s setup:1 setup:2 setup:3",
    "setup:1": "node ./scripts/gen.js",
    "setup:2": "yarn fmt:src",
    "setup:3": "yarn build",
    "tsc": "yarn type-check",
    "type-check": "wireit"
  },
  "dependencies": {
    "@noshiro/ts-utils": "*"
  },
  "devDependencies": {
    "@noshiro/ts-type-utils": "*"
  },
  "wireit": {
    "type-check": {
      "command": "tsc --noEmit",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.base.nolib.json",
        "../ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "build:cjs": {
      "command": "tsc --incremental --pretty --project config/tsconfig.cjs.json",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.base.nolib.json",
        "../ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [
        "cjs/**",
        ".tsbuildinfo"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "build:esm": {
      "command": "tsc --incremental --pretty --project config/tsconfig.esm.json",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.base.nolib.json",
        "../ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [
        "esm/**",
        ".tsbuildinfo"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "gi": {
      "command": "bash ../../../scripts/index_ts_generator.sh ./src --min-depth 1",
      "clean": false,
      "files": [
        "../../../scripts/index_ts_generator.sh",
        "src/**"
      ],
      "packageLocks": []
    },
    "lint": {
      "command": "eslint src/ --ext .ts --color --cache --cache-location .eslintcache ",
      "dependencies": [
        "fmt",
        "type-check"
      ],
      "files": [
        "src/**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.base.nolib.json",
        "../../../config/eslintrc/**",
        "../ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "lint:deps": {
      "command": "eslint src/ --ext .ts --color --cache --cache-location .eslintcache-deps --no-eslintrc --config ../../../config/eslintrc/.eslintrc-no-extraneous-dependency.js",
      "dependencies": [
        "fmt"
      ],
      "files": [
        "src/**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs",
        "../../../package.json",
        "package.json",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.base.nolib.json",
        "../../../config/eslintrc/**",
        "../ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    }
  }
}
