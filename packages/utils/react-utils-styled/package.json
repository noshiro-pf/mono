{
  "name": "@noshiro/react-utils-styled",
  "version": "1.0.0",
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": false,
  "main": "esm/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "scripts": {
    "_prettier": "prettier --ignore-path ${npm_package_config_root_dir}/.prettierignore  --write",
    "_script_genindex": "bash ${npm_package_config_root_dir}/scripts/index_ts_generator.sh",
    "build": "yarn build:esm",
    "prebuild:esm": "yarn clean:build:esm",
    "build:esm": "tsc --project config/tsconfig.esm.json",
    "clean": "run-s clean:**",
    "clean:build:esm": "rimraf esm",
    "fmt": "yarn _prettier .",
    "gi": "yarn _script_genindex ./src --min-depth 1",
    "lint": "eslint src/ --ext .ts,.tsx",
    "lint:deps": "yarn lint --no-eslintrc --config ${npm_package_config_root_dir}/config/eslintrc/.eslintrc-no-extraneous-dependency.js",
    "lint:fix": "yarn lint --fix",
    "test": "jest --config config/jest.config.json --passWithNoTests",
    "testw": "yarn test --watch"
  },
  "config": {
    "root_dir": "../../.."
  },
  "dependencies": {
    "@noshiro/react-utils": "*",
    "@noshiro/resize-observer-react-hooks": "*",
    "@noshiro/ts-utils": "*",
    "react": "^17.0.2",
    "styled-components": "^5.3.0"
  }
}
