{
  "name": "@mono/react-blueprintjs-utils",
  "version": "1.0.0",
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": false,
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "_script_genindex": "bash ${npm_package_config_scripts_dir}/index_ts_generator.sh",
    "prebuild": "yarn clean:build",
    "build": "tsc --project ${npm_package_config_ts_config_for_build}",
    "clean": "npm-run-all clean:*",
    "clean:build": "rimraf \"${npm_package_config_lib_dir}\"",
    "clean:config": "rimraf config/**/*.js scripts/**/*.js",
    "fmt": "prettier --write .",
    "gi": "yarn _script_genindex ./src",
    "lint": "eslint src/ --ext .ts,.tsx",
    "setup": "echo 'no setup script'",
    "test": "jest --config \"${npm_package_config_jest_config}\" --passWithNoTests",
    "testw": "yarn test --watch"
  },
  "config": {
    "jest_config": "config/jest.config.json",
    "lib_dir": "lib",
    "scripts_dir": "../../../scripts",
    "ts_config_for_build": "config/tsconfig.lib.json"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.36.0",
    "@blueprintjs/datetime": "^3.20.0",
    "@blueprintjs/icons": "^3.23.0",
    "@blueprintjs/table": "^3.8.18",
    "@mono/react-utils": "*",
    "@mono/react-utils-styled": "*",
    "@mono/resize-observer-hooks": "*",
    "@mono/ts-utils": "*",
    "react": "^17.0.1",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "typescript": "4.1.3"
  }
}
