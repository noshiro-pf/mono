{
  "name": "@noshiro/eslint-utils",
  "version": "1.0.0",
  "private": false,
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./esm/index.d.mts",
        "default": "./esm/index.mjs"
      }
    }
  },
  "scripts": {
    "build": "run-s build:scripts build:src",
    "build:scripts": "wireit",
    "build:src": "wireit",
    "clean": "run-p clean:**",
    "clean:build": "rimraf esm",
    "clean:eslintcache": "rimraf .eslintcache",
    "clean:wireit": "rimraf .wireit/**",
    "fmt": "yarn zz:cmd:prettier .",
    "gen-rules-type": "wireit",
    "gi": "wireit",
    "lint": "run-p lint:scripts lint:src",
    "lint:fix": "run-p lint:fix:scripts lint:fix:src",
    "lint:fix:scripts": "wireit",
    "lint:fix:src": "wireit",
    "lint:scripts": "wireit",
    "lint:src": "wireit",
    "tsc": "yarn type-check",
    "tscw": "tsc --noEmit --watch",
    "type-check": "wireit",
    "watch": "yarn build:src --watch",
    "zz:cmd:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint",
    "zz:cmd:eslint:print-config": "yarn zz:cmd:eslint --print-config src/index.mts",
    "zz:cmd:eslint:scripts": "yarn zz:cmd:eslint --config eslint.config.js \"./scripts/**/*\" --cache --cache-location ./scripts/.eslintcache",
    "zz:cmd:eslint:src": "yarn zz:cmd:eslint --config eslint.config.js './src/**/*' --cache --cache-location ./src/.eslintcache",
    "zz:cmd:prettier": "prettier --cache --cache-strategy content --ignore-path ../../../.prettierignore --write"
  },
  "devDependencies": {
    "@noshiro/mono-scripts": "*"
  },
  "wireit": {
    "type-check": {
      "command": "tsc --noEmit",
      "files": [
        "./**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "output": []
    },
    "gi": {
      "command": "bash ../../../scripts/index_ts_generator.sh ./src --min-depth 0 --ext .mts",
      "files": [
        "../../../scripts/index_ts_generator.sh",
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}"
      ],
      "clean": false,
      "output": [
        "src/**/index.mts"
      ],
      "packageLocks": []
    },
    "build:scripts": {
      "command": "tsc --project ./configs/tsconfig.scripts.json",
      "files": [
        "./scripts/**/*.{mts,ts,d.ts}",
        "./configs/tsconfig.scripts.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "clean": true,
      "output": [
        "scripts/**/*.mjs",
        "!scripts/eslint.config.gen.mjs"
      ]
    },
    "gen-rules-type": {
      "dependencies": [
        "build:scripts"
      ],
      "command": "node ./scripts/main.mjs",
      "files": [
        "../../../scripts/**",
        "./scripts/*.mjs",
        "./scripts/tsconfig.gen.json",
        "./scripts/eslint.config.gen.mjs",
        "../../../package.json",
        "../../../.prettierrc",
        "../../../config/tsconfig/**",
        "../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "clean": false,
      "output": [
        "./src/types/rules/**/*.mts"
      ]
    },
    "build:src": {
      "dependencies": [
        "gi",
        "gen-rules-type"
      ],
      "command": "tsc --project ./configs/tsconfig.build.json",
      "files": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./configs/tsconfig.build.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "clean": "if-file-deleted",
      "output": [
        "esm/**",
        ".tsbuildinfo"
      ]
    },
    "lint:scripts": {
      "dependencies": [
        "build"
      ],
      "command": "yarn zz:cmd:eslint:scripts",
      "files": [
        "scripts/**/*.mts",
        "eslint.config.js",
        "package.json",
        "tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "output": []
    },
    "lint:fix:scripts": {
      "dependencies": [
        "build"
      ],
      "command": "yarn zz:cmd:eslint:scripts --fix",
      "files": [
        "scripts/**/*.mts",
        "eslint.config.js",
        "package.json",
        "tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "clean": false,
      "output": [
        "scripts/**/*.mts"
      ]
    },
    "lint:src": {
      "dependencies": [
        "build"
      ],
      "command": "yarn zz:cmd:eslint:src",
      "files": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./eslint.config.js",
        "./package.json",
        "./tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "output": []
    },
    "lint:fix:src": {
      "dependencies": [
        "build"
      ],
      "command": "yarn zz:cmd:eslint:src --fix",
      "files": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./eslint.config.js",
        "./package.json",
        "./tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../packages/utils/ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.mts"
      ],
      "clean": false,
      "output": [
        "./src/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}"
      ]
    }
  }
}
