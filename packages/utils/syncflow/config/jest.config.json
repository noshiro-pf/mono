{
  "moduleNameMapper": {
    "^@noshiro/(.*)$": "<rootDir>/../$1/src"
  },
  "rootDir": "../",
  "roots": ["<rootDir>/src", "<rootDir>/test"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsconfig": "<rootDir>/config/tsconfig.test.json"
    }
  },
  "testMatch": ["<rootDir>/(test|src)/**/?(*.)+(spec|test).ts"],
  "testTimeout": 30000
}
