{
  "moduleNameMapper": {
    "^@noshiro/(.*)$": "<rootDir>/../$1/src"
  },
  "rootDir": "../",
  "roots": ["<rootDir>/src", "<rootDir>/test"],
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "tsconfig": "<rootDir>/config/tsconfig.test.json"
      }
    ]
  },
  "testMatch": ["<rootDir>/test/**/*.test.stream.ts"],
  "testTimeout": 30000,
  "detectOpenHandles": true
}
