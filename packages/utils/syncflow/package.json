{
  "name": "@noshiro/syncflow",
  "version": "1.1.1",
  "private": false,
  "description": "Reactive Programming Library for TypeScript/JavaScript",
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./esm/index.d.mts",
        "default": "./esm/index.mjs"
      }
    }
  },
  "files": [
    "package.json",
    "esm"
  ],
  "scripts": {
    "build": "wireit",
    "clean": "run-p clean:**",
    "clean:build": "rimraf esm",
    "clean:eslintcache": "rimraf .eslintcache",
    "clean:wireit": "rimraf .wireit/**",
    "fmt": "yarn zz:cmd:prettier .",
    "gi": "run-p gi:src gi:test",
    "gi:src": "bash ../../../scripts/bash/index_ts_generator.sh ./src --min-depth 0 --ext .mts",
    "gi:test": "bash ../../../scripts/bash/index_ts_generator.sh ./test/cases --min-depth 0 --ext .mts",
    "lint": "yarn zz:cmd:eslint:src-and-test",
    "lint:fix": "yarn zz:cmd:eslint:src-and-test --fix",
    "pub": "yarn zz:cmd:publish",
    "start": "node esm/test/preview-main.js",
    "test": "yarn zz:cmd:vitest run",
    "test:stream": "yarn zz:cmd:vitest:stream run",
    "testw": "yarn zz:cmd:vitest watch",
    "tsc": "yarn type-check",
    "tscw": "tsc --noEmit --watch",
    "type-check": "tsc --noEmit",
    "zz:cmd:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint",
    "zz:cmd:eslint:print-config": "yarn zz:cmd:eslint --print-config src/index.mts",
    "zz:cmd:eslint:src-and-test": "yarn zz:cmd:eslint --config eslint.config.js './{src,test}/**/*' --cache --cache-location ./src/.eslintcache",
    "zz:cmd:prettier": "prettier --cache --cache-strategy content --ignore-path ../../../.prettierignore --write",
    "zz:cmd:publish": "yarn publish --no-git-tag-version --access=public",
    "zz:cmd:vitest": "vitest --config ./configs/vitest.config.ts",
    "zz:cmd:vitest:stream": "vitest --config ./configs/vitest.config.stream.ts"
  },
  "dependencies": {
    "@noshiro/ts-utils": "*",
    "@noshiro/ts-utils-additional": "*"
  },
  "devDependencies": {
    "@noshiro/eslint-configs": "*",
    "@noshiro/mono-scripts": "*",
    "@noshiro/ts-type-utils": "*"
  },
  "peerDependencies": {
    "tslib": "^2.4.0",
    "typescript": "^4.9.3"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "clean:build"
      ],
      "command": "tsc --project ./configs/tsconfig.build.json"
    }
  }
}
