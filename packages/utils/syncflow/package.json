{
  "name": "@noshiro/syncflow",
  "version": "1.1.1",
  "private": false,
  "description": "Reactive Programming Library for TypeScript/JavaScript",
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./esm/index.d.mts",
        "default": "./esm/index.mjs"
      }
    }
  },
  "files": [
    "package.json",
    "esm"
  ],
  "scripts": {
    "build": "wireit",
    "clean": "run-p clean:**",
    "clean:build": "rimraf esm",
    "clean:eslintcache": "rimraf .eslintcache",
    "clean:wireit": "rimraf .wireit/**",
    "fmt": "yarn zz:cmd:prettier .",
    "gi": "run-p gi:src gi:test",
    "gi:src": "wireit",
    "gi:test": "wireit",
    "lint": "wireit",
    "lint:fix": "wireit",
    "pub": "yarn zz:cmd:publish",
    "start": "node esm/test/preview-main.js",
    "test": "wireit",
    "test:stream": "yarn zz:cmd:vitest:stream run",
    "testw": "yarn zz:cmd:vitest watch",
    "tsc": "yarn type-check",
    "tscw": "tsc --noEmit --watch",
    "type-check": "wireit",
    "zz:cmd:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint",
    "zz:cmd:eslint:print-config": "yarn zz:cmd:eslint --print-config src/index.mts",
    "zz:cmd:eslint:src-and-test": "yarn zz:cmd:eslint --config eslint.config.js './{src,test}/**/*' --cache --cache-location ./src/.eslintcache",
    "zz:cmd:prettier": "prettier --cache --cache-strategy content --ignore-path ../../../.prettierignore --write",
    "zz:cmd:publish": "yarn publish --no-git-tag-version --access=public",
    "zz:cmd:vitest": "vitest --config ./configs/vitest.config.ts",
    "zz:cmd:vitest:stream": "vitest --config ./configs/vitest.config.stream.ts"
  },
  "dependencies": {
    "@noshiro/ts-utils": "*",
    "@noshiro/ts-utils-additional": "*"
  },
  "devDependencies": {
    "@noshiro/eslint-utils": "*",
    "@noshiro/mono-scripts": "*",
    "@noshiro/ts-type-utils": "*"
  },
  "peerDependencies": {
    "tslib": "^2.4.0",
    "typescript": "^4.9.3"
  },
  "wireit": {
    "type-check": {
      "command": "tsc --noEmit",
      "files": [
        "./**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**"
      ],
      "output": []
    },
    "gi:src": {
      "command": "bash ../../../scripts/bash/index_ts_generator.sh ./src --min-depth 0 --ext .mts",
      "files": [
        "../../../scripts/bash/index_ts_generator.sh",
        "./(src|test)/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}"
      ],
      "clean": false,
      "output": [
        "src/**/index.mts"
      ],
      "packageLocks": []
    },
    "gi:test": {
      "command": "bash ../../../scripts/bash/index_ts_generator.sh ./test/cases --min-depth 0 --ext .mts",
      "files": [
        "../../../scripts/bash/index_ts_generator.sh",
        "test/cases/**"
      ],
      "clean": false,
      "output": [
        "test/cases/**/index.mts"
      ],
      "packageLocks": []
    },
    "build": {
      "command": "tsc --project ./configs/tsconfig.build.json",
      "files": [
        "./(src|test)/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./configs/tsconfig.build.json",
        "../../../package.json",
        "../../../config/tsconfig/**"
      ],
      "clean": true,
      "output": [
        "esm/**",
        ".tsbuildinfo"
      ]
    },
    "test": {
      "command": "yarn zz:cmd:vitest run",
      "files": [
        "./(src|test)/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./configs/vitest.config.ts",
        "./configs/tsconfig.test.json",
        "../../../package.json",
        "../../../config/tsconfig/**"
      ],
      "output": []
    },
    "lint": {
      "dependencies": [
        "../../../packages/utils/eslint-utils:build"
      ],
      "command": "yarn zz:cmd:eslint:src-and-test",
      "files": [
        "./(src|test)/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./eslint.config.js",
        "./package.json",
        "./tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**"
      ],
      "output": []
    },
    "lint:fix": {
      "dependencies": [
        "../../../packages/utils/eslint-utils:build"
      ],
      "command": "yarn zz:cmd:eslint:src-and-test --fix",
      "files": [
        "./(src|test)/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}",
        "./eslint.config.js",
        "./package.json",
        "./tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**"
      ],
      "clean": false,
      "output": [
        "./(src|test)/**/*.{mjs,mts,js,ts,jsx,tsx,d.mts,d.ts}"
      ]
    }
  }
}
