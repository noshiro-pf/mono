{
  "name": "@noshiro/syncflow",
  "version": "1.0.10",
  "private": false,
  "description": "Reactive Programming Library for TypeScript/JavaScript",
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": false,
  "main": "cjs/src/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "files": [
    "package.json",
    "cjs",
    "esm"
  ],
  "scripts": {
    "_prettier": "prettier --ignore-path ${npm_package_config_root_dir}/.prettierignore  --write",
    "_script_genindex": "bash ${npm_package_config_root_dir}/scripts/index_ts_generator.sh",
    "build": "run-s build:*",
    "prebuild:cjs": "yarn clean:build:cjs",
    "build:cjs": "tsc --project config/tsconfig.cjs.json",
    "prebuild:cjs:watch": "yarn prebuild:cjs",
    "build:cjs:watch": "tsc  --watch --project config/tsconfig.cjs.json",
    "prebuild:esm": "yarn clean:build:esm",
    "build:esm": "tsc --project config/tsconfig.esm.json",
    "clean": "run-s clean:**",
    "clean:build:cjs": "rimraf cjs",
    "clean:build:esm": "rimraf esm",
    "fmt": "yarn _prettier .",
    "gi": "run-s gi:*",
    "gi:src": "yarn _script_genindex ./src --min-depth 1",
    "gi:test": "yarn _script_genindex ./test/cases",
    "lint": "eslint \"./{src,test}/**/*\" --ext .ts",
    "lint:deps": "yarn lint --no-eslintrc --config ${npm_package_config_root_dir}/config/eslintrc/.eslintrc-no-extraneous-dependency.js",
    "lint:fix": "yarn lint --fix",
    "pub": "yarn publish --no-git-tag-version --access=public",
    "setup": "yarn build",
    "start": "node cjs/test/preview-main.js",
    "test": "jest --config config/jest.config.json",
    "test:detectOpenHandles": "jest --config config/jest.config.json --detectOpenHandles",
    "tsc": "tsc --noEmit",
    "type-check": "tsc --noEmit"
  },
  "config": {
    "root_dir": "../../.."
  },
  "dependencies": {
    "@noshiro/ts-utils": "*"
  },
  "peerDependencies": {
    "tslib": "^2.3.1",
    "typescript": "^4.4.2"
  }
}
