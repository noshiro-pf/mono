{
  "name": "@noshiro/syncflow",
  "version": "1.1.1",
  "private": false,
  "description": "Reactive Programming Library for TypeScript/JavaScript",
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": false,
  "main": "cjs/src/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "files": [
    "package.json",
    "cjs",
    "esm"
  ],
  "scripts": {
    "build": "yarn z:build:wireit",
    "clean": "run-p clean:**",
    "clean:build": "rimraf cjs esm",
    "clean:eslintcache": "rimraf .eslintcache",
    "clean:wireit": "rimraf .wireit/*/cache",
    "fmt": "yarn zz:cmd:prettier .",
    "gi": "run-p z:gi:src:wireit z:gi:test:wireit",
    "lint": "yarn z:lint:src-and-test:wireit",
    "lint:fix": "yarn z:lint:fix:src-and-test:wireit",
    "pub": "yarn zz:cmd:publish",
    "start": "node cjs/test/preview-main.js",
    "test": "yarn z:test:wireit",
    "test:stream": "yarn zz:cmd:jest:stream",
    "testw": "yarn zz:cmd:jest --watch",
    "tsc": "yarn z:type-check:wireit",
    "tscw": "yarn z:type-check:impl --watch",
    "z:build:impl": "run-p zz:cmd:build:**",
    "z:build:wireit": "wireit",
    "z:gi:src:impl": "yarn zz:cmd:gi ./src --min-depth 1",
    "z:gi:src:wireit": "wireit",
    "z:gi:test:impl": "yarn zz:cmd:gi ./test/cases --min-depth 1",
    "z:gi:test:wireit": "wireit",
    "z:lint:fix:src-and-test:impl": "yarn zz:cmd:eslint:src-and-test --fix",
    "z:lint:fix:src-and-test:wireit": "wireit",
    "z:lint:src-and-test:impl": "yarn zz:cmd:eslint:src-and-test",
    "z:lint:src-and-test:wireit": "wireit",
    "z:test:impl": "yarn zz:cmd:jest",
    "z:test:wireit": "wireit",
    "z:type-check:impl": "tsc --noEmit",
    "z:type-check:wireit": "wireit",
    "zz:cmd:build:cjs": "yarn zz:cmd:tsc-incremental --project config/tsconfig.cjs.json",
    "zz:cmd:build:esm": "yarn zz:cmd:tsc-incremental --project config/tsconfig.esm.json",
    "zz:cmd:eslint": "eslint --ext .ts,.tsx --color",
    "zz:cmd:eslint:src-and-test": "yarn zz:cmd:eslint \"./{src,test}/**/*\" --cache --cache-location ./.eslintcache",
    "zz:cmd:gi": "bash ../../../scripts/index_ts_generator.sh",
    "zz:cmd:jest": "jest --config config/jest.config.json --passWithNoTests",
    "zz:cmd:jest:stream": "jest --config config/jest.config.stream.json --passWithNoTests",
    "zz:cmd:prettier": "prettier --cache --cache-strategy content --ignore-path ../../../.prettierignore --write",
    "zz:cmd:publish": "yarn publish --no-git-tag-version --access=public",
    "zz:cmd:tsc-incremental": "tsc --incremental --pretty"
  },
  "dependencies": {
    "@noshiro/ts-utils": "*",
    "@noshiro/ts-utils-additional": "*"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "^2.0.1",
    "@noshiro/ts-type-utils": "*",
    "@tsconfig/docusaurus": "^1.0.6"
  },
  "peerDependencies": {
    "tslib": "^2.4.0",
    "typescript": "^4.9.3"
  },
  "wireit": {
    "z:build:wireit": {
      "command": "yarn z:build:impl",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../config/tsconfig/**",
        "../stdlib/stdlib.d.ts",
        "../ts-type-utils/ts-type-utils.d.ts",
        "../ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.ts"
      ],
      "output": [
        "cjs/**",
        "esm/**",
        ".tsbuildinfo"
      ]
    },
    "z:gi:src:wireit": {
      "command": "yarn z:gi:src:impl",
      "clean": false,
      "files": [
        "../../../scripts/index_ts_generator.sh",
        "src/**"
      ],
      "output": [
        "src/*/**/index.ts"
      ],
      "packageLocks": []
    },
    "z:gi:test:wireit": {
      "command": "yarn z:gi:test:impl",
      "clean": false,
      "files": [
        "../../../scripts/index_ts_generator.sh",
        "test/cases/**"
      ],
      "output": [
        "test/cases/**/index.ts"
      ],
      "packageLocks": []
    },
    "z:lint:src-and-test:wireit": {
      "command": "yarn z:lint:src-and-test:impl",
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs",
        "package.json",
        "tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../config/eslintrc/**",
        "../stdlib/stdlib.d.ts",
        "../ts-type-utils/ts-type-utils.d.ts",
        "../ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.ts"
      ],
      "output": []
    },
    "z:lint:fix:src-and-test:wireit": {
      "command": "yarn z:lint:fix:src-and-test:impl",
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs",
        "package.json",
        "tsconfig.json",
        "../../../package.json",
        "../../../config/tsconfig/**",
        "../../../config/eslintrc/**",
        "../stdlib/stdlib.d.ts",
        "../ts-type-utils/ts-type-utils.d.ts",
        "../ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.ts"
      ],
      "clean": false,
      "output": [
        "src/**/*.ts"
      ]
    },
    "z:test:wireit": {
      "command": "yarn z:test:impl",
      "files": [
        "config/jest.config.json",
        "src/**"
      ]
    },
    "z:type-check:wireit": {
      "command": "yarn z:type-check:impl",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../config/tsconfig/**",
        "../stdlib/stdlib.d.ts",
        "../ts-type-utils/ts-type-utils.d.ts",
        "../ts-type-utils-no-stdlib/ts-type-utils-no-stdlib.d.ts"
      ],
      "output": []
    }
  }
}
