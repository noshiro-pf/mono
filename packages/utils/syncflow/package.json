{
  "name": "@noshiro/syncflow",
  "version": "1.1.1",
  "private": false,
  "description": "Reactive Programming Library for TypeScript/JavaScript",
  "license": "MIT",
  "author": "noshiro",
  "sideEffects": false,
  "main": "cjs/src/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "files": [
    "package.json",
    "cjs",
    "esm"
  ],
  "scripts": {
    "build": "run-p build:**",
    "build:cjs": "wireit",
    "build:esm": "wireit",
    "clean": "rimraf cjs esm .wireit",
    "fmt": "prettier --ignore-path ../../../.prettierignore  --write .",
    "gi": "run-p gi:**",
    "gi:src": "wireit",
    "gi:test": "wireit",
    "lint": "wireit",
    "lint:fix": "yarn lint --fix",
    "pub": "yarn publish --no-git-tag-version --access=public",
    "setup": "yarn build",
    "start": "node cjs/test/preview-main.js",
    "test": "wireit",
    "test:detectOpenHandles": "yarn test --detectOpenHandles",
    "testw": "jest --config config/jest.config.json --passWithNoTests --watch",
    "tscw": "tsc --noEmit --watch",
    "type-check": "wireit"
  },
  "dependencies": {
    "@noshiro/ts-utils": "*",
    "@noshiro/ts-utils-additional": "*"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "^2.0.0-beta.21",
    "@noshiro/ts-type-utils": "*",
    "@tsconfig/docusaurus": "^1.0.6"
  },
  "peerDependencies": {
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "wireit": {
    "type-check": {
      "command": "tsc --noEmit",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.base.nolib.json",
        "../ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "build:cjs": {
      "command": "tsc --incremental --pretty --project config/tsconfig.cjs.json",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.base.nolib.json",
        "../ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [
        "cjs/**",
        ".tsbuildinfo"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "build:esm": {
      "command": "tsc --incremental --pretty --project config/tsconfig.esm.json",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.base.nolib.json",
        "../ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [
        "esm/**",
        ".tsbuildinfo"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "gi:src": {
      "command": "bash ../../../scripts/index_ts_generator.sh ./src --min-depth 1",
      "files": [
        "../../../scripts/index_ts_generator.sh",
        "src/**"
      ],
      "output": [
        "src/*/**/index.ts"
      ],
      "packageLocks": []
    },
    "gi:test": {
      "command": "bash ../../../scripts/index_ts_generator.sh ./test/cases",
      "files": [
        "../../../scripts/index_ts_generator.sh",
        "test/cases/**"
      ],
      "output": [
        "test/cases/**/index.ts"
      ],
      "packageLocks": []
    },
    "lint": {
      "command": "eslint \"./{src,test}/**/*\" --ext .ts,.tsx --color --cache --cache-location .eslintcache",
      "dependencies": [
        "type-check"
      ],
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs",
        "../../../package.json",
        "package.json",
        "tsconfig.json",
        "../../../config/tsconfig/tsconfig.base.nolib.json",
        "../../../config/eslintrc/**",
        "../ts-type-utils/ts-type-utils.d.ts"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "test": {
      "command": "jest --config config/jest.config.json --passWithNoTests",
      "dependencies": [
        "type-check"
      ],
      "files": [
        "config/jest.config.json",
        "src/**"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    }
  }
}
